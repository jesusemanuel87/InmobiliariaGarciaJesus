@model InmobiliariaGarciaJesus.Models.ProfileViewModel
@{
    ViewData["Title"] = "Mi Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4><i class="fas fa-user"></i> Mi Perfil</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-4 text-center">
                            <div class="mb-3 position-relative">
                                @{
                                    var photoUrl = !string.IsNullOrEmpty(Model.FotoPerfil) ? Model.FotoPerfil : "/uploads/profiles/user_default.png";
                                }
                                <img id="profileImage" src="@photoUrl" alt="Foto de perfil" class="rounded-circle" style="width: 120px; height: 120px; object-fit: cover;">
                                
                                <!-- Botón para cambiar foto -->
                                <button type="button" class="btn btn-sm btn-primary position-absolute" style="bottom: 5px; right: 35px;" onclick="document.getElementById('profilePhotoInput').click();" title="Cambiar foto">
                                    <i class="fas fa-camera"></i>
                                </button>
                                
                                <!-- Botón para eliminar foto (solo si no es la imagen por defecto) -->
                                @if (!string.IsNullOrEmpty(Model.FotoPerfil) && !Model.FotoPerfil.Contains("user_default.png"))
                                {
                                    <button type="button" class="btn btn-sm btn-danger position-absolute" style="bottom: 5px; right: 5px;" onclick="deleteProfilePhoto()" title="Eliminar foto">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                }
                                
                                <form id="profilePhotoForm" enctype="multipart/form-data" style="display: none;">
                                    <input type="file" id="profilePhotoInput" name="profilePhoto" accept="image/*" onchange="uploadProfilePhoto()">
                                    @Html.AntiForgeryToken()
                                </form>
                            </div>
                            <h5>@Model.NombreUsuario</h5>
                            <span class="badge bg-@(Model.Rol == InmobiliariaGarciaJesus.Models.RolUsuario.Administrador ? "danger" : 
                                                   Model.Rol == InmobiliariaGarciaJesus.Models.RolUsuario.Empleado ? "warning" :
                                                   Model.Rol == InmobiliariaGarciaJesus.Models.RolUsuario.Propietario ? "primary" : "success")">
                                (@Model.Rol)
                            </span>
                        </div>
                        <div class="col-md-8">
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong><i class="fas fa-envelope"></i> Email:</strong></td>
                                    <td>@Model.Email</td>
                                </tr>
                                @if (!string.IsNullOrEmpty(Model.Nombre))
                                {
                                    <tr>
                                        <td><strong><i class="fas fa-user"></i> Nombre Completo:</strong></td>
                                        <td>@Model.Nombre @Model.Apellido</td>
                                    </tr>
                                }
                                @if (!string.IsNullOrEmpty(Model.Dni))
                                {
                                    <tr>
                                        <td><strong><i class="fas fa-id-card"></i> DNI:</strong></td>
                                        <td>@Model.Dni</td>
                                    </tr>
                                }
                                @if (!string.IsNullOrEmpty(Model.Telefono))
                                {
                                    <tr>
                                        <td><strong><i class="fas fa-phone"></i> Teléfono:</strong></td>
                                        <td>@Model.Telefono</td>
                                    </tr>
                                }
                                @if (Model.RolEmpleado.HasValue)
                                {
                                    <tr>
                                        <td><strong><i class="fas fa-briefcase"></i> Rol Empleado:</strong></td>
                                        <td>@Model.RolEmpleado</td>
                                    </tr>
                                }
                                @if (Model.FechaIngreso.HasValue)
                                {
                                    <tr>
                                        <td><strong><i class="fas fa-calendar"></i> Fecha Ingreso:</strong></td>
                                        <td>@Model.FechaIngreso.Value.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                }
                                <tr>
                                    <td><strong><i class="fas fa-calendar-plus"></i> Miembro desde:</strong></td>
                                    <td>@Model.FechaCreacion.ToString("dd/MM/yyyy")</td>
                                </tr>
                                @if (Model.UltimoAcceso.HasValue)
                                {
                                    <tr>
                                        <td><strong><i class="fas fa-clock"></i> Último acceso:</strong></td>
                                        <td>@Model.UltimoAcceso.Value.ToString("dd/MM/yyyy HH:mm")</td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Cambiar Contraseña -->
            <div class="card shadow mb-3">
                <div class="card-header bg-warning text-dark">
                    <h6><i class="fas fa-key"></i> Cambiar Contraseña</h6>
                </div>
                <div class="card-body">
                    <form asp-action="ChangePassword" method="post">
                        <div class="mb-2">
                            <input type="password" name="CurrentPassword" class="form-control form-control-sm" placeholder="Contraseña actual" required />
                        </div>
                        <div class="mb-2">
                            <input type="password" name="NewPassword" class="form-control form-control-sm" placeholder="Nueva contraseña" required minlength="6" />
                        </div>
                        <div class="mb-3">
                            <input type="password" name="ConfirmPassword" class="form-control form-control-sm" placeholder="Confirmar contraseña" required />
                        </div>
                        <button type="submit" class="btn btn-warning btn-sm w-100">
                            <i class="fas fa-key"></i> Cambiar
                        </button>
                    </form>
                </div>
            </div>

            <!-- Cambiar Rol (si tiene múltiples roles disponibles) -->
            @if (Model.RolesDisponibles.Count > 1)
            {
                <div class="card shadow">
                    <div class="card-header bg-secondary text-white">
                        <h6><i class="fas fa-exchange-alt"></i> Cambiar Rol</h6>
                    </div>
                    <div class="card-body">
                        <p class="small text-muted">Tienes acceso a múltiples roles:</p>
                        <form asp-action="SwitchRole" method="post">
                            <input type="hidden" name="UsuarioId" value="@Model.Id" />
                            <input type="hidden" name="RolActual" value="@((int)Model.Rol)" />
                            <input type="hidden" name="NombreCompleto" value="@Model.Nombre @Model.Apellido" />
                            
                            <div class="mb-3">
                                <select name="NuevoRol" class="form-select form-select-sm" required>
                                    <option value="">Seleccionar rol</option>
                                    @foreach (var rol in Model.RolesDisponibles)
                                    {
                                        if (rol != Model.Rol)
                                        {
                                            <option value="@((int)rol)">@rol</option>
                                        }
                                    }
                                </select>
                            </div>
                            <button type="submit" class="btn btn-secondary btn-sm w-100">
                                <i class="fas fa-exchange-alt"></i> Cambiar Rol
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Accesos Rápidos según el rol -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h6><i class="fas fa-tachometer-alt"></i> Accesos Rápidos</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        @switch (Model.Rol)
                        {
                            case InmobiliariaGarciaJesus.Models.RolUsuario.Administrador:
                                <div class="col-md-3 mb-2">
                                    <a href="@Url.Action("Index", "Propietarios")" class="btn btn-outline-primary btn-sm w-100">
                                        <i class="fas fa-users"></i> Propietarios
                                    </a>
                                </div>
                                <div class="col-md-3 mb-2">
                                    <a href="@Url.Action("Index", "Inquilinos")" class="btn btn-outline-success btn-sm w-100">
                                        <i class="fas fa-user-friends"></i> Inquilinos
                                    </a>
                                </div>
                                <div class="col-md-3 mb-2">
                                    <a href="@Url.Action("Index", "Inmuebles")" class="btn btn-outline-info btn-sm w-100">
                                        <i class="fas fa-building"></i> Inmuebles
                                    </a>
                                </div>
                                <div class="col-md-3 mb-2">
                                    <a href="@Url.Action("Index", "Empleados")" class="btn btn-outline-danger btn-sm w-100">
                                        <i class="fas fa-user-tie"></i> Empleados
                                    </a>
                                </div>
                                break;

                            case InmobiliariaGarciaJesus.Models.RolUsuario.Empleado:
                                <div class="col-md-4 mb-2">
                                    <a href="@Url.Action("Index", "Propietarios")" class="btn btn-outline-primary btn-sm w-100">
                                        <i class="fas fa-users"></i> Propietarios
                                    </a>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <a href="@Url.Action("Index", "Inquilinos")" class="btn btn-outline-success btn-sm w-100">
                                        <i class="fas fa-user-friends"></i> Inquilinos
                                    </a>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <a href="@Url.Action("Index", "Inmuebles")" class="btn btn-outline-info btn-sm w-100">
                                        <i class="fas fa-building"></i> Inmuebles
                                    </a>
                                </div>
                                break;

                            case InmobiliariaGarciaJesus.Models.RolUsuario.Propietario:
                                <div class="col-md-6 mb-2">
                                    <a href="@Url.Action("MisInmuebles", "Inmuebles")" class="btn btn-outline-primary btn-sm w-100">
                                        <i class="fas fa-building"></i> Mis Inmuebles
                                    </a>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <a href="@Url.Action("MisContratos", "Contratos")" class="btn btn-outline-success btn-sm w-100">
                                        <i class="fas fa-file-contract"></i> Mis Contratos
                                    </a>
                                </div>
                                break;

                            case InmobiliariaGarciaJesus.Models.RolUsuario.Inquilino:
                                <div class="col-md-6 mb-2">
                                    <a href="@Url.Action("MiContrato", "Contratos")" class="btn btn-outline-primary btn-sm w-100">
                                        <i class="fas fa-file-contract"></i> Mi Contrato
                                    </a>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <a href="@Url.Action("MisPagos", "Pagos")" class="btn btn-outline-success btn-sm w-100">
                                        <i class="fas fa-money-bill"></i> Mis Pagos
                                    </a>
                                </div>
                                break;
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Auth/profile.js"></script>
}
