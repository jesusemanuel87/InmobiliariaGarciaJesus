@model InmobiliariaGarciaJesus.Models.RegisterViewModel
@{
    ViewData["Title"] = "Registrarse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white text-center">
                    <h4><i class="fas fa-user-plus"></i> Crear Cuenta</h4>
                </div>
                <div class="card-body">
                    <!-- Información sobre el proceso de validación -->
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <i class="fas fa-info-circle"></i> <strong>Información importante:</strong>
                        <ul class="mb-0 mt-2">
                            <li>Su cuenta será creada con estado <strong>Inactivo</strong> y deberá ser validada por un administrador antes de poder iniciar sesión.</li>
                            <li>Si ya tiene una cuenta como Propietario, puede registrarse también como Inquilino usando el <strong>mismo email</strong> pero con un <strong>nombre de usuario diferente</strong>.</li>
                            <li>Cada rol tendrá acceso a funcionalidades específicas del sistema.</li>
                        </ul>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>

                    <!-- Mostrar errores de validación de forma más visible -->
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i> <strong>Error en el registro:</strong>
                            <ul class="mb-0 mt-2">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    
                    <form asp-action="Register" method="post" id="registerForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 d-none"></div>
                        
                        <!-- Tipo de Usuario -->
                        <div class="mb-3">
                            <label asp-for="TipoUsuario" class="form-label">
                                <i class="fas fa-user-tag"></i> Tipo de Usuario
                            </label>
                            <select asp-for="TipoUsuario" class="form-select" id="tipoUsuario">
                                <option value="">Seleccione un tipo</option>
                                <option value="@((int)InmobiliariaGarciaJesus.Models.RolUsuario.Propietario)">Propietario</option>
                                <option value="@((int)InmobiliariaGarciaJesus.Models.RolUsuario.Inquilino)">Inquilino</option>
                            </select>
                            <span asp-validation-for="TipoUsuario" class="text-danger"></span>
                        </div>

                        <!-- Información de Usuario -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="NombreUsuario" class="form-label">
                                        <i class="fas fa-at"></i> Nombre de Usuario
                                    </label>
                                    <input asp-for="NombreUsuario" class="form-control" placeholder="Nombre de usuario único" />
                                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                                    <div class="form-text" id="usernameHelp"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">
                                        <i class="fas fa-envelope"></i> Email
                                    </label>
                                    <input asp-for="Email" class="form-control" placeholder="correo@ejemplo.com" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <div class="form-text" id="emailHelp"></div>
                                </div>
                            </div>
                        </div>

                        <!-- Campo para validar cuenta existente (multi-rol) - Oculto por defecto -->
                        <div id="existingAccountValidation" class="alert alert-warning" style="display: none;">
                            <h6><i class="fas fa-user-check"></i> Ya tiene una cuenta con este email</h6>
                            <p class="mb-2">Para agregar un nuevo rol, ingrese su contraseña actual:</p>
                            <div class="mb-3">
                                <label for="ExistingPassword" class="form-label">Contraseña de su cuenta existente</label>
                                <div class="input-group">
                                    <input type="password" id="ExistingPassword" class="form-control" placeholder="Ingrese su contraseña" />
                                    <button class="btn btn-outline-secondary" type="button" id="toggleExistingPassword">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <div class="form-text" id="existingPasswordHelp"></div>
                            </div>
                            <button type="button" id="validateExistingAccount" class="btn btn-primary btn-sm">
                                <i class="fas fa-check"></i> Validar y Continuar
                            </button>
                        </div>

                        <!-- Contraseñas -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label">
                                        <i class="fas fa-lock"></i> Contraseña
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="Password" class="form-control" placeholder="Mínimo 6 caracteres" />
                                        <button class="btn btn-outline-secondary" type="button" id="togglePassword1">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ConfirmPassword" class="form-label">
                                        <i class="fas fa-lock"></i> Confirmar Contraseña
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Repita la contraseña" />
                                        <button class="btn btn-outline-secondary" type="button" id="togglePassword2">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Información Personal (se muestra cuando se selecciona tipo) -->
                        <div id="personalInfo" style="display: none;">
                            <hr>
                            <h5 class="mb-3"><i class="fas fa-user"></i> Información Personal</h5>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="Nombre" class="form-label">Nombre</label>
                                        <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                                        <span asp-validation-for="Nombre" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="Apellido" class="form-label">Apellido</label>
                                        <input asp-for="Apellido" class="form-control" placeholder="Apellido" />
                                        <span asp-validation-for="Apellido" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="Dni" class="form-label">DNI</label>
                                        <input asp-for="Dni" class="form-control" placeholder="12345678" />
                                        <span asp-validation-for="Dni" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="Telefono" class="form-label">Teléfono</label>
                                        <input asp-for="Telefono" class="form-control" placeholder="2664123456" />
                                        <span asp-validation-for="Telefono" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-user-plus"></i> Crear Cuenta
                            </button>
                        </div>
                    </form>

                    <hr>
                    
                    <div class="text-center">
                        <p class="mb-0">¿Ya tienes cuenta?</p>
                        <a asp-action="Login" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
                        </a>
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-link">
                    <i class="fas fa-home"></i> Volver al inicio
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Auth/register.js?v=@DateTime.Now.Ticks"></script>
}
