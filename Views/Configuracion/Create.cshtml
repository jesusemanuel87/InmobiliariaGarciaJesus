@model Configuracion
@{
    ViewData["Title"] = "Nueva Configuración";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-plus"></i> Nueva Configuración</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Clave" class="form-label">Clave</label>
                                    <input asp-for="Clave" class="form-control" placeholder="Ej: NUEVA_CONFIGURACION" />
                                    <span asp-validation-for="Clave" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Tipo" class="form-label">Tipo</label>
                                    <select asp-for="Tipo" class="form-select">
                                        <option value="">Seleccione un tipo</option>
                                        <option value="1">Meses Mínimos</option>
                                        <option value="2">Multa Terminación Temprana</option>
                                        <option value="3">Multa Terminación Tardía</option>
                                        <option value="4">Interés Vencimiento (10-20 días)</option>
                                        <option value="5">Interés Vencimiento (20+ días)</option>
                                        <option value="6">Interés Vencimiento Mensual</option>
                                    </select>
                                    <span asp-validation-for="Tipo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Valor" class="form-label">Valor</label>
                            <input asp-for="Valor" class="form-control" placeholder="Valor de la configuración" />
                            <span asp-validation-for="Valor" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Descripcion" class="form-label">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripción opcional de la configuración"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Crear Configuración
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
