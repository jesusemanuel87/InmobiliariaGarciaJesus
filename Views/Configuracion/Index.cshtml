@model IEnumerable<Configuracion>
@{
    ViewData["Title"] = "Configuraciones";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-cogs"></i> Configuraciones del Sistema</h2>
                <div>
                    <a asp-action="AdminPanel" class="btn btn-primary me-2">
                        <i class="fas fa-tools"></i> Panel de Administración
                    </a>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus"></i> Nueva Configuración
                    </a>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Clave</th>
                                        <th>Valor</th>
                                        <th>Tipo</th>
                                        <th>Descripción</th>
                                        <th>Última Modificación</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var config in Model.OrderBy(c => c.Tipo).ThenBy(c => c.Clave))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@config.Clave</strong>
                                            </td>
                                            <td>
                                                @if (config.Tipo == TipoConfiguracion.MesesMinimos)
                                                {
                                                    <span class="badge bg-@(bool.Parse(config.Valor) ? "success" : "secondary")">
                                                        @(bool.Parse(config.Valor) ? "Habilitado" : "Deshabilitado")
                                                    </span>
                                                }
                                                else
                                                {
                                                    @config.Valor
                                                    @if (config.Tipo == TipoConfiguracion.InteresVencimiento || 
                                                         config.Tipo == TipoConfiguracion.InteresVencimientoExtendido || 
                                                         config.Tipo == TipoConfiguracion.InteresVencimientoMensual)
                                                    {
                                                        <span class="text-muted">%</span>
                                                    }
                                                    else if (config.Tipo == TipoConfiguracion.MultaTerminacionTemprana || 
                                                             config.Tipo == TipoConfiguracion.MultaTerminacionTardia)
                                                    {
                                                        <span class="text-muted">meses</span>
                                                    }
                                                }
                                            </td>
                                            <td>
                                                @switch (config.Tipo)
                                                {
                                                    case TipoConfiguracion.MesesMinimos:
                                                        <span class="badge bg-primary">Meses Mínimos</span>
                                                        break;
                                                    case TipoConfiguracion.MultaTerminacionTemprana:
                                                        <span class="badge bg-warning text-dark">Multa Temprana</span>
                                                        break;
                                                    case TipoConfiguracion.MultaTerminacionTardia:
                                                        <span class="badge bg-info">Multa Tardía</span>
                                                        break;
                                                    case TipoConfiguracion.InteresVencimiento:
                                                        <span class="badge bg-danger">Interés 10-20d</span>
                                                        break;
                                                    case TipoConfiguracion.InteresVencimientoExtendido:
                                                        <span class="badge bg-danger">Interés 20+d</span>
                                                        break;
                                                    case TipoConfiguracion.InteresVencimientoMensual:
                                                        <span class="badge bg-danger">Interés Mensual</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">@config.Descripcion</small>
                                            </td>
                                            <td>
                                                <small class="text-muted">@config.FechaModificacion.ToString("dd/MM/yyyy HH:mm")</small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@config.Id" class="btn btn-outline-info btn-sm">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@config.Id" class="btn btn-outline-warning btn-sm">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@config.Id" class="btn btn-outline-danger btn-sm">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-cogs fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No hay configuraciones registradas</h4>
                            <p class="text-muted">Comience creando una nueva configuración o use el panel de administración.</p>
                            <a asp-action="AdminPanel" class="btn btn-primary me-2">
                                <i class="fas fa-tools"></i> Ir al Panel de Administración
                            </a>
                            <a asp-action="Create" class="btn btn-success">
                                <i class="fas fa-plus"></i> Nueva Configuración
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Configuracion/index-configuracion.js"></script>
}
