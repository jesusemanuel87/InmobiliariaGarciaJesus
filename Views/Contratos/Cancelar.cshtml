@model InmobiliariaGarciaJesus.Models.Contrato

@{
    ViewData["Title"] = "Cancelar Contrato";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-ban me-2"></i>Cancelar Contrato
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>¿Está seguro que desea cancelar este contrato?</strong>
                        <p class="mb-0 mt-2">Esta acción no se puede deshacer.</p>
                    </div>

                    <div class="mb-4">
                        <h6 class="text-muted">Información del Contrato</h6>
                        <p><strong>Inquilino:</strong> @Model.Inquilino?.NombreCompleto</p>
                        <p><strong>Inmueble:</strong> @Model.Inmueble?.Direccion</p>
                        <p><strong>Precio Mensual:</strong> <span class="text-success">$@Model.Precio.ToString("N0")</span></p>
                        <p><strong>Estado Actual:</strong> 
                            <span class="badge bg-warning text-dark">@Model.Estado</span>
                        </p>
                    </div>

                    <form asp-action="Cancelar" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        
                        <div class="form-group mb-3">
                            <label for="motivo" class="form-label">Motivo de Cancelación *</label>
                            <textarea name="motivo" class="form-control" rows="4" 
                                      placeholder="Ingrese el motivo de la cancelación..." required></textarea>
                            <span asp-validation-for="MotivoCancelacion" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Volver
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-ban me-1"></i>Cancelar Contrato
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
