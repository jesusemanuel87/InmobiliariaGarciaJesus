@model InmobiliariaGarciaJesus.Models.ContratoFinalizacionViewModel

@{
    ViewData["Title"] = "Finalizar Contrato";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-flag-checkered me-2"></i>Finalizar Contrato
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model.Contrato != null)
                    {
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6 class="text-muted">Información del Contrato</h6>
                                <p><strong>Inquilino:</strong> @Model.Contrato.Inquilino?.NombreCompleto</p>
                                <p><strong>Inmueble:</strong> @Model.Contrato.Inmueble?.Direccion</p>
                                <p><strong>Precio Mensual:</strong> <span class="text-success">$@Model.Contrato.Precio.ToString("N0")</span></p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted">Fechas del Contrato</h6>
                                <p><strong>Fecha Inicio:</strong> @Model.Contrato.FechaInicio.ToString("dd/MM/yyyy")</p>
                                <p><strong>Fecha Fin Original:</strong> @Model.Contrato.FechaFin.ToString("dd/MM/yyyy")</p>
                                <p><strong>Duración Total:</strong> @Model.MesesTotales meses</p>
                            </div>
                        </div>

                        @if (Model.EsFinalizacionTemprana)
                        {
                            <div class="alert alert-warning">
                                <h6><i class="fas fa-exclamation-triangle me-2"></i>Finalización Temprana Detectada</h6>
                                <p>El contrato se está finalizando antes de tiempo (@Model.MesesCumplidos de @Model.MesesTotales meses).</p>
                                @if (Model.MultaCalculada.HasValue && Model.MultaCalculada > 0)
                                {
                                    var multaSoloTerminacion = Model.MultaCalculada.Value - Model.ImporteAdeudado;
                                    <p><strong>Multa calculada:</strong> <span class="text-danger">$@multaSoloTerminacion.ToString("N0")</span></p>
                                }
                            </div>
                        }

                        @if (Model.MesesAdeudados > 0)
                        {
                            <div class="alert alert-danger">
                                <h6><i class="fas fa-exclamation-circle me-2"></i>Pagos Atrasados</h6>
                                <p><strong>Meses adeudados:</strong> @Model.MesesAdeudados</p>
                                <p><strong>Importe adeudado:</strong> <span class="text-danger">$@Model.ImporteAdeudado.ToString("N0")</span></p>
                                <ul class="mb-2">
                                    @foreach (var pago in Model.PagosAtrasados)
                                    {
                                        <li>
                                            Pago #@pago.Numero - $@pago.Importe.ToString("N0") (@pago.Estado)
                                            @if (pago.Intereses > 0)
                                            {
                                                <span class="text-dark fw-bold"> + Interés $@pago.Intereses.ToString("N0")</span>
                                            }
                                        </li>
                                    }
                                </ul>
                                @if (Model.MultaCalculada.HasValue && Model.MultaCalculada > 0)
                                {
                                    <div class="border-top pt-2">
                                        <p class="mb-0"><strong class="text-primary fs-5">Monto Total a Pagar: <span class="text-danger">$@Model.MultaCalculada.Value.ToString("N0")</span></strong></p>
                                    </div>
                                }
                            </div>
                        }

                        <form asp-action="Finalizar" method="post">
                            <input type="hidden" asp-for="ContratoId" />
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="FechaFinalizacion" class="form-label"></label>
                                        <input asp-for="FechaFinalizacion" class="form-control" type="date" />
                                        <span asp-validation-for="FechaFinalizacion" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Motivo" class="form-label">Motivo de Finalización</label>
                                <textarea asp-for="Motivo" class="form-control" rows="3" placeholder="Ingrese el motivo de la finalización..."></textarea>
                                <span asp-validation-for="Motivo" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-1"></i>Volver
                                </a>
                                <button type="submit" class="btn btn-danger" id="btnFinalizar">
                                    <i class="fas fa-flag-checkered me-1"></i>Finalizar Contrato
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Confirmación de Pago -->
<div class="modal fade" id="modalConfirmacionPago" tabindex="-1" aria-labelledby="modalConfirmacionPagoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="modalConfirmacionPagoLabel">
                    <i class="fas fa-check-circle me-2"></i>Contrato Finalizado
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info">
                    <h6><i class="fas fa-info-circle me-2"></i>Finalización Exitosa</h6>
                    <p>El contrato ha sido finalizado correctamente.</p>
                    <div id="resumenPago"></div>
                </div>
                <p class="mb-0"><strong>¿Desea procesar el pago de la multa y deudas pendientes ahora?</strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="procesarPago(false)">
                    <i class="fas fa-clock me-1"></i>Pagar Después
                </button>
                <button type="button" class="btn btn-success" onclick="procesarPago(true)">
                    <i class="fas fa-credit-card me-1"></i>Pagar Ahora
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/Contrato/finalizar-contrato.js"></script>
}
