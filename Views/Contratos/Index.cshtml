@model IEnumerable<InmobiliariaGarciaJesus.Models.Contrato>

@{
    ViewData["Title"] = "Contratos";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-file-contract"></i> Contratos</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nuevo Contrato
                </a>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Inquilino</th>
                                        <th>Inmueble</th>
                                        <th>@Html.DisplayNameFor(model => model.FechaInicio)</th>
                                        <th>@Html.DisplayNameFor(model => model.FechaFin)</th>
                                        <th>@Html.DisplayNameFor(model => model.Precio)</th>
                                        <th>@Html.DisplayNameFor(model => model.Estado)</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @if (item.Inquilino != null)
                                                {
                                                    <span class="fw-bold">@item.Inquilino.Nombre @item.Inquilino.Apellido</span><br>
                                                    <small class="text-muted">DNI: @item.Inquilino.Dni</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">ID: @item.InquilinoId</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Inmueble != null)
                                                {
                                                    <span class="fw-bold">@item.Inmueble.Direccion</span><br>
                                                    <small class="text-muted">@item.Inmueble.Tipo - @item.Inmueble.Ambientes amb.</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">ID: @item.InmuebleId</span>
                                                }
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.FechaInicio)</td>
                                            <td>@Html.DisplayFor(modelItem => item.FechaFin)</td>
                                            <td>
                                                <span class="text-success fw-bold">$@item.Precio.ToString("N0")</span>
                                            </td>
                                            <td>
                                                @switch (item.Estado)
                                                {
                                                    case InmobiliariaGarciaJesus.Models.EstadoContrato.Activo:
                                                        <span class="badge bg-success">Activo</span>
                                                        break;
                                                    case InmobiliariaGarciaJesus.Models.EstadoContrato.Finalizado:
                                                        <span class="badge bg-secondary">Finalizado</span>
                                                        break;
                                                    case InmobiliariaGarciaJesus.Models.EstadoContrato.Cancelado:
                                                        <span class="badge bg-danger">Cancelado</span>
                                                        break;
                                                    case InmobiliariaGarciaJesus.Models.EstadoContrato.Reservado:
                                                        <span class="badge bg-warning text-dark">Reservado</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">Sin Estado</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm me-1" title="Ver detalles">
                                                        <i class="fas fa-eye me-1"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-outline-primary btn-sm me-1 toggle-pagos" 
                                                            data-contrato-id="@item.Id" title="Ver/Ocultar pagos">
                                                        <i class="fas fa-money-bill-wave me-1"></i>
                                                        <i class="fas fa-chevron-down toggle-icon"></i>
                                                    </button>
                                                    <a asp-controller="Pagos" asp-action="ByContrato" asp-route-contratoId="@item.Id" class="btn btn-outline-success btn-sm me-1" title="Vista completa de pagos">
                                                        <i class="fas fa-external-link-alt me-1"></i>
                                                    </a>
                                                    @if (item.Estado == InmobiliariaGarciaJesus.Models.EstadoContrato.Activo || item.Estado == InmobiliariaGarciaJesus.Models.EstadoContrato.Reservado)
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm me-1" title="Editar">
                                                            <i class="fas fa-edit me-1"></i>
                                                        </a>
                                                        @if (item.Estado == InmobiliariaGarciaJesus.Models.EstadoContrato.Activo)
                                                        {
                                                            <a asp-action="Finalizar" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Finalizar">
                                                                <i class="fas fa-flag-checkered me-1"></i>
                                                            </a>
                                                        }
                                                        else if (item.Estado == InmobiliariaGarciaJesus.Models.EstadoContrato.Reservado)
                                                        {
                                                            <a asp-action="Cancelar" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Cancelar">
                                                                <i class="fas fa-ban me-1"></i>
                                                            </a>
                                                        }
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                        <tr class="pagos-container" data-contrato-id="@item.Id" style="display: none;">
                                            <td colspan="7" class="p-0">
                                                <div class="pagos-content"></div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-file-contract fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No hay contratos registrados</h4>
                            <p class="text-muted">Comienza agregando tu primer contrato</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Crear Contrato
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.toggle-pagos').click(function() {
                var contratoId = $(this).data('contrato-id');
                var container = $('.pagos-container[data-contrato-id="' + contratoId + '"]');
                var content = container.find('.pagos-content');
                var icon = $(this).find('.toggle-icon');
                
                if (container.is(':visible')) {
                    // Hide pagos
                    container.slideUp();
                    icon.removeClass('fa-chevron-up').addClass('fa-chevron-down');
                } else {
                    // Show pagos
                    if (content.is(':empty')) {
                        // Load pagos via AJAX
                        content.html('<div class="text-center p-3"><i class="fas fa-spinner fa-spin"></i> Cargando pagos...</div>');
                        
                        $.get('@Url.Action("GetPagos", "Contratos")', { id: contratoId })
                            .done(function(data) {
                                content.html('<tbody>' + data + '</tbody>');
                                container.slideDown();
                                icon.removeClass('fa-chevron-down').addClass('fa-chevron-up');
                            })
                            .fail(function() {
                                content.html('<div class="text-center p-3 text-danger"><i class="fas fa-exclamation-triangle"></i> Error al cargar pagos</div>');
                                container.slideDown();
                                icon.removeClass('fa-chevron-down').addClass('fa-chevron-up');
                            });
                    } else {
                        container.slideDown();
                        icon.removeClass('fa-chevron-down').addClass('fa-chevron-up');
                    }
                }
            });
        });
    </script>
}
