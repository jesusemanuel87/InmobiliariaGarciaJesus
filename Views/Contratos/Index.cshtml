@model IEnumerable<InmobiliariaGarciaJesus.Models.Contrato>

@{
    ViewData["Title"] = "Contratos";
}

<!-- Contratos Filters CSS -->
<link rel="stylesheet" href="~/css/contratos-filters.css">

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-file-contract"></i> Contratos</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nuevo Contrato
                </a>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Panel de Filtros -->
            <div class="card mb-4 contratos-filters">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-filter"></i> Filtros
                        </h5>
                        <button type="button" class="btn btn-outline-secondary btn-sm" id="toggleFilters">
                            <i class="fas fa-chevron-up"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body" id="filtersPanel">
                    <form method="get" id="filtersForm">
                        <div class="row g-3">
                            <!-- Estado (Multiselect) -->
                            <div class="col-md-3">
                                <label for="estado" class="form-label">Estado</label>
                                <div class="dropdown">
                                    <button class="btn btn-outline-secondary dropdown-toggle w-100 text-start" type="button" id="estadoDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                        <span id="estadoPlaceholder">Seleccionar estados...</span>
                                    </button>
                                    <div class="dropdown-menu w-100" aria-labelledby="estadoDropdown" id="estadoDropdownMenu">
                                        <div class="form-check dropdown-item-text border-bottom">
                                            <input class="form-check-input" type="checkbox" id="estadoTodos">
                                            <label class="form-check-label" for="estadoTodos">
                                                <strong>Todos</strong>
                                            </label>
                                        </div>
                                        <div class="form-check dropdown-item-text">
                                            <input class="form-check-input" type="checkbox" name="estado" value="Activo" id="estadoActivo">
                                            <label class="form-check-label" for="estadoActivo">
                                                Activo
                                            </label>
                                        </div>
                                        <div class="form-check dropdown-item-text">
                                            <input class="form-check-input" type="checkbox" name="estado" value="Finalizado" id="estadoFinalizado">
                                            <label class="form-check-label" for="estadoFinalizado">
                                                Finalizado
                                            </label>
                                        </div>
                                        <div class="form-check dropdown-item-text">
                                            <input class="form-check-input" type="checkbox" name="estado" value="Cancelado" id="estadoCancelado">
                                            <label class="form-check-label" for="estadoCancelado">
                                                Cancelado
                                            </label>
                                        </div>
                                        <div class="form-check dropdown-item-text">
                                            <input class="form-check-input" type="checkbox" name="estado" value="Reservado" id="estadoReservado">
                                            <label class="form-check-label" for="estadoReservado">
                                                Reservado
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Inquilino -->
                            <div class="col-md-3">
                                <label for="inquilino" class="form-label">Inquilino</label>
                                <input type="text" name="inquilino" id="inquilino" class="form-control" 
                                       value="@ViewBag.Inquilino" placeholder="Nombre o DNI">
                            </div>

                            <!-- Inmueble -->
                            <div class="col-md-3">
                                <label for="inmueble" class="form-label">Inmueble</label>
                                <input type="text" name="inmueble" id="inmueble" class="form-control" 
                                       value="@ViewBag.Inmueble" placeholder="Dirección">
                            </div>

                            <!-- Precio Mínimo -->
                            <div class="col-md-3">
                                <label for="precioMin" class="form-label">Precio Mínimo</label>
                                <input type="number" name="precioMin" id="precioMin" class="form-control" 
                                       value="@ViewBag.PrecioMin" placeholder="0" min="0" step="1000">
                            </div>

                            <!-- Precio Máximo -->
                            <div class="col-md-3">
                                <label for="precioMax" class="form-label">Precio Máximo</label>
                                <input type="number" name="precioMax" id="precioMax" class="form-control" 
                                       value="@ViewBag.PrecioMax" placeholder="Sin límite" min="0" step="1000">
                            </div>

                            <!-- Fecha Inicio Desde -->
                            <div class="col-md-3">
                                <label for="fechaInicioDesde" class="form-label">Inicio Desde</label>
                                <input type="date" name="fechaInicioDesde" id="fechaInicioDesde" class="form-control" 
                                       value="@(ViewBag.FechaInicioDesde?.ToString("yyyy-MM-dd"))">
                            </div>

                            <!-- Fecha Inicio Hasta -->
                            <div class="col-md-3">
                                <label for="fechaInicioHasta" class="form-label">Inicio Hasta</label>
                                <input type="date" name="fechaInicioHasta" id="fechaInicioHasta" class="form-control" 
                                       value="@(ViewBag.FechaInicioHasta?.ToString("yyyy-MM-dd"))">
                            </div>

                            <!-- Fecha Fin Desde -->
                            <div class="col-md-3">
                                <label for="fechaFinDesde" class="form-label">Fin Desde</label>
                                <input type="date" name="fechaFinDesde" id="fechaFinDesde" class="form-control" 
                                       value="@(ViewBag.FechaFinDesde?.ToString("yyyy-MM-dd"))">
                            </div>

                            <!-- Fecha Fin Hasta -->
                            <div class="col-md-3">
                                <label for="fechaFinHasta" class="form-label">Fin Hasta</label>
                                <input type="date" name="fechaFinHasta" id="fechaFinHasta" class="form-control" 
                                       value="@(ViewBag.FechaFinHasta?.ToString("yyyy-MM-dd"))">
                            </div>

                            <!-- Fecha Creación Desde -->
                            <div class="col-md-3">
                                <label for="fechaDesde" class="form-label">Creado Desde</label>
                                <input type="date" name="fechaDesde" id="fechaDesde" class="form-control" 
                                       value="@(ViewBag.FechaDesde?.ToString("yyyy-MM-dd"))">
                            </div>

                            <!-- Fecha Creación Hasta -->
                            <div class="col-md-3">
                                <label for="fechaHasta" class="form-label">Creado Hasta</label>
                                <input type="date" name="fechaHasta" id="fechaHasta" class="form-control" 
                                       value="@(ViewBag.FechaHasta?.ToString("yyyy-MM-dd"))">
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fas fa-search"></i> Filtrar
                                </button>
                                <button type="button" class="btn btn-outline-secondary" id="clearFilters">
                                    <i class="fas fa-times"></i> Limpiar Filtros
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Resultados -->
            <div class="card contratos-results">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-file-contract"></i> Contratos
                            <span class="badge bg-primary ms-2">@ViewBag.ContratosFiltrados de @ViewBag.TotalContratos</span>
                        </h5>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Nº Contrato</th>
                                        <th>Inquilino</th>
                                        <th>Inmueble</th>
                                        <th>@Html.DisplayNameFor(model => model.FechaInicio)</th>
                                        <th>@Html.DisplayNameFor(model => model.FechaFin)</th>
                                        <th>@Html.DisplayNameFor(model => model.Precio)</th>
                                        <th>@Html.DisplayNameFor(model => model.Estado)</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary fs-6">#@item.Id</span>
                                            </td>
                                            <td>
                                                @if (item.Inquilino != null)
                                                {
                                                    <span class="fw-bold">@item.Inquilino.Nombre @item.Inquilino.Apellido</span><br>
                                                    <small class="text-muted">DNI: @item.Inquilino.Dni</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">ID: @item.InquilinoId</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Inmueble != null)
                                                {
                                                    <span class="fw-bold">@item.Inmueble.Direccion</span><br>
                                                    <small class="text-muted">@item.Inmueble.Tipo - @item.Inmueble.Ambientes amb.</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">ID: @item.InmuebleId</span>
                                                }
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.FechaInicio)</td>
                                            <td>@Html.DisplayFor(modelItem => item.FechaFin)</td>
                                            <td>
                                                <span class="text-success fw-bold">$@item.Precio.ToString("N0")</span>
                                            </td>
                                            <td>
                                                @switch (item.Estado)
                                                {
                                                    case InmobiliariaGarciaJesus.Models.EstadoContrato.Activo:
                                                        <span class="badge bg-success">Activo</span>
                                                        break;
                                                    case InmobiliariaGarciaJesus.Models.EstadoContrato.Finalizado:
                                                        <span class="badge bg-secondary">Finalizado</span>
                                                        break;
                                                    case InmobiliariaGarciaJesus.Models.EstadoContrato.Cancelado:
                                                        <span class="badge bg-danger">Cancelado</span>
                                                        break;
                                                    case InmobiliariaGarciaJesus.Models.EstadoContrato.Reservado:
                                                        <span class="badge bg-warning text-dark">Reservado</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">Sin Estado</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm me-1" title="Ver detalles">
                                                        <i class="fas fa-eye me-1"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-outline-primary btn-sm me-1 toggle-pagos" 
                                                            data-contrato-id="@item.Id" title="Ver/Ocultar pagos">
                                                        <i class="fas fa-money-bill-wave me-1"></i>
                                                        <i class="fas fa-chevron-down toggle-icon"></i>
                                                    </button>
                                                    <a asp-controller="Pagos" asp-action="ByContrato" asp-route-contratoId="@item.Id" class="btn btn-outline-success btn-sm me-1" title="Vista completa de pagos">
                                                        <i class="fas fa-external-link-alt me-1"></i>
                                                    </a>
                                                    @if (item.Estado == InmobiliariaGarciaJesus.Models.EstadoContrato.Activo || item.Estado == InmobiliariaGarciaJesus.Models.EstadoContrato.Reservado)
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm me-1" title="Editar">
                                                            <i class="fas fa-edit me-1"></i>
                                                        </a>
                                                        @if (item.Estado == InmobiliariaGarciaJesus.Models.EstadoContrato.Activo)
                                                        {
                                                            <a asp-action="Finalizar" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Finalizar">
                                                                <i class="fas fa-flag-checkered me-1"></i>
                                                            </a>
                                                        }
                                                        else if (item.Estado == InmobiliariaGarciaJesus.Models.EstadoContrato.Reservado)
                                                        {
                                                            <a asp-action="Cancelar" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Cancelar">
                                                                <i class="fas fa-ban me-1"></i>
                                                            </a>
                                                        }
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                        <tr class="pagos-container" data-contrato-id="@item.Id" style="display: none;">
                                            <td colspan="8" class="p-0">
                                                <div class="table-responsive">
                                                    <table class="table table-bordered mb-0">
                                                        <tbody class="pagos-content"></tbody>
                                                    </table>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-file-contract fa-3x text-muted mb-3"></i>
                            @if (ViewBag.TotalContratos > 0)
                            {
                                <h4 class="text-muted">No se encontraron contratos con los filtros aplicados</h4>
                                <p class="text-muted">Intenta ajustar los criterios de búsqueda</p>
                                <button type="button" class="btn btn-outline-secondary" id="clearFiltersEmpty">
                                    <i class="fas fa-times"></i> Limpiar Filtros
                                </button>
                            }
                            else
                            {
                                <h4 class="text-muted">No hay contratos registrados</h4>
                                <p class="text-muted">Comienza agregando tu primer contrato</p>
                                <a asp-action="Create" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Crear Contrato
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Pasar datos del servidor al JavaScript -->
    <script>
        window.estadosSeleccionados = [];
    </script>
    
    <script src="~/js/Contratos/contratos-filters.js"></script>
    <script src="~/js/Contrato/index-contrato.js"></script>
}
