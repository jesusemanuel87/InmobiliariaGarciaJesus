@model InmobiliariaGarciaJesus.Models.Empleado
@{
    ViewData["Title"] = "Crear Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4><i class="fas fa-user-plus"></i> Crear Nuevo Empleado</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" id="empleadoForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <!-- Información Personal -->
                        <h5 class="mb-3"><i class="fas fa-user"></i> Información Personal</h5>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Nombre" class="form-label">Nombre</label>
                                    <input asp-for="Nombre" class="form-control" placeholder="Nombre del empleado" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Apellido" class="form-label">Apellido</label>
                                    <input asp-for="Apellido" class="form-control" placeholder="Apellido del empleado" />
                                    <span asp-validation-for="Apellido" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Dni" class="form-label">DNI</label>
                                    <input asp-for="Dni" class="form-control" placeholder="12345678" />
                                    <span asp-validation-for="Dni" class="text-danger"></span>
                                    <div class="form-text" id="dniHelp"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Telefono" class="form-label">Teléfono</label>
                                    <input asp-for="Telefono" class="form-control" placeholder="2664123456" />
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="empleado@inmobiliaria.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <div class="form-text" id="emailHelp"></div>
                        </div>

                        <!-- Información Laboral -->
                        <hr>
                        <h5 class="mb-3"><i class="fas fa-briefcase"></i> Información Laboral</h5>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Rol" class="form-label">Rol</label>
                                    <select asp-for="Rol" class="form-select">
                                        <option value="">Seleccione un rol</option>
                                        <option value="@((int)InmobiliariaGarciaJesus.Models.RolEmpleado.Empleado)">Empleado</option>
                                        <option value="@((int)InmobiliariaGarciaJesus.Models.RolEmpleado.Administrador)">Administrador</option>
                                    </select>
                                    <span asp-validation-for="Rol" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FechaIngreso" class="form-label">Fecha de Ingreso</label>
                                    <input asp-for="FechaIngreso" class="form-control" type="date" />
                                    <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Observaciones" class="form-label">Observaciones</label>
                            <textarea asp-for="Observaciones" class="form-control" rows="3" 
                                      placeholder="Observaciones adicionales (opcional)"></textarea>
                            <span asp-validation-for="Observaciones" class="text-danger"></span>
                        </div>

                        <!-- Información de Usuario -->
                        <hr>
                        <h5 class="mb-3"><i class="fas fa-key"></i> Credenciales de Usuario</h5>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="nombreUsuario" class="form-label">Nombre de Usuario</label>
                                    <input type="text" name="nombreUsuario" id="nombreUsuario" class="form-control" 
                                           placeholder="Nombre de usuario único" required />
                                    <div class="form-text" id="usernameHelp"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="password" class="form-label">Contraseña</label>
                                    <div class="input-group">
                                        <input type="password" name="password" id="password" class="form-control" 
                                               placeholder="Contraseña temporal" required minlength="6" />
                                        <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                    <div class="form-text">Mínimo 6 caracteres</div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Crear Empleado
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            // Toggle password visibility
            $('#togglePassword').click(function() {
                const passwordField = document.getElementById('password');
                const icon = this.querySelector('i');
                
                if (passwordField.type === 'password') {
                    passwordField.type = 'text';
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    passwordField.type = 'password';
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
            });

            // Validación en tiempo real de email
            let emailTimeout;
            $('#Email').on('input', function() {
                const email = $(this).val();
                const helpDiv = $('#emailHelp');
                
                clearTimeout(emailTimeout);
                
                if (email.length > 0 && email.indexOf('@@') > -1) {
                    emailTimeout = setTimeout(function() {
                        $.post('/Empleados/CheckEmailExists', { email: email })
                            .done(function(data) {
                                if (data.exists) {
                                    helpDiv.html('<i class="fas fa-times text-danger"></i> Email ya está en uso')
                                           .removeClass('text-success').addClass('text-danger');
                                } else {
                                    helpDiv.html('<i class="fas fa-check text-success"></i> Email disponible')
                                           .removeClass('text-danger').addClass('text-success');
                                }
                            });
                    }, 500);
                } else {
                    helpDiv.html('');
                }
            });

            // Validación en tiempo real de DNI
            let dniTimeout;
            $('#Dni').on('input', function() {
                const dni = $(this).val();
                const helpDiv = $('#dniHelp');
                
                clearTimeout(dniTimeout);
                
                if (dni.length >= 7) {
                    dniTimeout = setTimeout(function() {
                        $.post('/Empleados/CheckDniExists', { dni: dni })
                            .done(function(data) {
                                if (data.exists) {
                                    helpDiv.html('<i class="fas fa-times text-danger"></i> DNI ya está en uso')
                                           .removeClass('text-success').addClass('text-danger');
                                } else {
                                    helpDiv.html('<i class="fas fa-check text-success"></i> DNI disponible')
                                           .removeClass('text-danger').addClass('text-success');
                                }
                            });
                    }, 500);
                } else {
                    helpDiv.html('');
                }
            });

            // Validación en tiempo real de username
            let usernameTimeout;
            $('#nombreUsuario').on('input', function() {
                const username = $(this).val();
                const helpDiv = $('#usernameHelp');
                
                clearTimeout(usernameTimeout);
                
                if (username.length >= 3) {
                    usernameTimeout = setTimeout(function() {
                        $.post('/Auth/CheckUsernameAvailability', { username: username })
                            .done(function(data) {
                                if (data.available) {
                                    helpDiv.html('<i class="fas fa-check text-success"></i> Nombre de usuario disponible')
                                           .removeClass('text-danger').addClass('text-success');
                                } else {
                                    helpDiv.html('<i class="fas fa-times text-danger"></i> Nombre de usuario ya está en uso')
                                           .removeClass('text-success').addClass('text-danger');
                                }
                            });
                    }, 500);
                } else {
                    helpDiv.html('');
                }
            });

            // Auto-generar nombre de usuario basado en nombre y apellido
            $('#Nombre, #Apellido').on('input', function() {
                const nombre = $('#Nombre').val().toLowerCase();
                const apellido = $('#Apellido').val().toLowerCase();
                
                if (nombre && apellido) {
                    const username = nombre.charAt(0) + apellido;
                    $('#nombreUsuario').val(username);
                    $('#nombreUsuario').trigger('input'); // Trigger validation
                }
            });

            // Set default date to today
            $('#FechaIngreso').val(new Date().toISOString().split('T')[0]);
        });
    </script>
}
