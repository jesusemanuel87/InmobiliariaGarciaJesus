@model InmobiliariaGarciaJesus.Models.Empleado
@{
    ViewData["Title"] = "Dar de Baja Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="fas fa-user-times"></i> Dar de Baja Empleado</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>¡Atención!</strong> Esta acción dará de baja al empleado del sistema. 
                        El empleado no será eliminado permanentemente, pero no podrá acceder al sistema.
                    </div>

                    <!-- Información del Empleado -->
                    <h5 class="mb-3"><i class="fas fa-user"></i> Información del Empleado</h5>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Nombre Completo:</strong>
                            <p class="text-muted">@Model.NombreCompleto</p>
                        </div>
                        <div class="col-md-6">
                            <strong>DNI:</strong>
                            <p class="text-muted">@Model.Dni</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Email:</strong>
                            <p class="text-muted">@Model.Email</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Teléfono:</strong>
                            <p class="text-muted">@Model.Telefono</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Rol:</strong>
                            <p>
                                <span class="badge bg-@(Model.Rol == InmobiliariaGarciaJesus.Models.RolEmpleado.Administrador ? "danger" : "warning") fs-6">
                                    @Model.RolDescripcion
                                </span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <strong>Fecha de Ingreso:</strong>
                            <p class="text-muted">@Model.FechaIngreso.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Observaciones))
                    {
                        <div class="mb-3">
                            <strong>Observaciones:</strong>
                            <p class="text-muted">@Model.Observaciones</p>
                        </div>
                    }

                    <!-- Formulario de Confirmación -->
                    <hr>
                    <form asp-action="Delete" method="post">
                        <input asp-for="Id" type="hidden" />
                        
                        <div class="mb-3">
                            <label for="motivoBaja" class="form-label">
                                <strong>Motivo de la Baja (Opcional):</strong>
                            </label>
                            <textarea name="motivoBaja" id="motivoBaja" class="form-control" rows="3" 
                                      placeholder="Ingrese el motivo de la baja del empleado..."></textarea>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="confirmBaja" required>
                                <label class="form-check-label" for="confirmBaja">
                                    Confirmo que deseo dar de baja a este empleado
                                </label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger" id="btnConfirmar" disabled>
                                <i class="fas fa-user-times"></i> Confirmar Baja
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Empleado/delete-empleado.js"></script>
}
