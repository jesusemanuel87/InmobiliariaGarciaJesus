@model InmobiliariaGarciaJesus.Models.Empleado
@{
    ViewData["Title"] = "Detalles del Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4><i class="fas fa-user"></i> Detalles del Empleado</h4>
                </div>
                <div class="card-body">
                    <!-- Información Personal -->
                    <h5 class="mb-3"><i class="fas fa-user"></i> Información Personal</h5>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Nombre Completo:</strong>
                            <p class="text-muted">@Model.NombreCompleto</p>
                        </div>
                        <div class="col-md-6">
                            <strong>DNI:</strong>
                            <p class="text-muted">@Model.Dni</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Email:</strong>
                            <p class="text-muted">
                                <a href="mailto:@Model.Email">@Model.Email</a>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <strong>Teléfono:</strong>
                            <p class="text-muted">@Model.Telefono</p>
                        </div>
                    </div>

                    <!-- Información Laboral -->
                    <hr>
                    <h5 class="mb-3"><i class="fas fa-briefcase"></i> Información Laboral</h5>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Rol:</strong>
                            <p>
                                <span class="badge bg-@(Model.Rol == InmobiliariaGarciaJesus.Models.RolEmpleado.Administrador ? "danger" : "warning") fs-6">
                                    @Model.RolDescripcion
                                </span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <strong>Fecha de Ingreso:</strong>
                            <p class="text-muted">@Model.FechaIngreso.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Estado:</strong>
                            <p>
                                <span class="badge bg-@(Model.Estado ? "success" : "secondary") fs-6">
                                    @(Model.Estado ? "Activo" : "Inactivo")
                                </span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <strong>Tiempo en la Empresa:</strong>
                            <p class="text-muted">
                                @{
                                    var tiempoEnEmpresa = DateTime.Now - Model.FechaIngreso;
                                    var años = (int)(tiempoEnEmpresa.TotalDays / 365);
                                    var meses = (int)((tiempoEnEmpresa.TotalDays % 365) / 30);
                                }
                                @if (años > 0)
                                {
                                    @años @(años == 1 ? "año" : "años")
                                    @if (meses > 0)
                                    {
                                        <text> y @meses @(meses == 1 ? "mes" : "meses")</text>
                                    }
                                }
                                else if (meses > 0)
                                {
                                    @meses @(meses == 1 ? "mes" : "meses")
                                }
                                else
                                {
                                    <text>Menos de un mes</text>
                                }
                            </p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Observaciones))
                    {
                        <div class="mb-3">
                            <strong>Observaciones:</strong>
                            <p class="text-muted">@Model.Observaciones</p>
                        </div>
                    }

                    <!-- Información del Sistema -->
                    <hr>
                    <h5 class="mb-3"><i class="fas fa-info-circle"></i> Información del Sistema</h5>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Fecha de Creación:</strong>
                            <p class="text-muted">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Última Modificación:</strong>
                            <p class="text-muted">
                                @if (Model.FechaModificacion.HasValue)
                                {
                                    @Model.FechaModificacion.Value.ToString("dd/MM/yyyy HH:mm")
                                }
                                else
                                {
                                    <text>Sin modificaciones</text>
                                }
                            </p>
                        </div>
                    </div>

                    <!-- Acciones -->
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver a la Lista
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            @if (Model.Estado)
                            {
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                    <i class="fas fa-user-times"></i> Dar de Baja
                                </a>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6">Empleado Inactivo</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
