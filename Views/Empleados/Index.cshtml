@model IEnumerable<InmobiliariaGarciaJesus.Models.Empleado>
@{
    ViewData["Title"] = "Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-user-tie"></i> Gestión de Empleados</h2>
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Nuevo Empleado
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Panel de Filtros -->
            <div class="card shadow mb-4">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="mb-0"><i class="fas fa-filter"></i> Filtros de Búsqueda</h6>
                        <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#filtrosEmpleados">
                            <i class="fas fa-chevron-down"></i>
                        </button>
                    </div>
                </div>
                <div class="collapse show" id="filtrosEmpleados">
                    <div class="card-body">
                        <form method="get" id="filtrosForm">
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label class="form-label">Estado</label>
                                    <select name="estado" class="form-select" id="filtroEstado">
                                        <option value="">Todos</option>
                                        <option value="true" selected="@(ViewBag.EstadoSeleccionado?.ToString() == "True")">Activo</option>
                                        <option value="false" selected="@(ViewBag.EstadoSeleccionado?.ToString() == "False")">Inactivo</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Rol</label>
                                    <select name="rol" class="form-select" id="filtroRol">
                                        <option value="">Todos</option>
                                        <option value="Empleado" selected="@(ViewBag.RolSeleccionado == "Empleado")">Empleado</option>
                                        <option value="Administrador" selected="@(ViewBag.RolSeleccionado == "Administrador")">Administrador</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Buscar</label>
                                    <input type="text" name="buscar" class="form-control" placeholder="Nombre, DNI o Email" id="filtroBuscar" value="@ViewBag.BuscarSeleccionado">
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">&nbsp;</label>
                                    <div class="d-grid gap-2 d-md-flex">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-search"></i> Filtrar
                                        </button>
                                        <button type="button" class="btn btn-outline-secondary" onclick="limpiarFiltros()">
                                            <i class="fas fa-times"></i> Limpiar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-list"></i> Lista de Empleados</h5>
                        <span class="badge bg-light text-dark">Total: @Model.Count()</span>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Nombre Completo</th>
                                        <th>DNI</th>
                                        <th>Email</th>
                                        <th>Teléfono</th>
                                        <th>Rol</th>
                                        <th>Fecha Ingreso</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var empleado in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@empleado.NombreCompleto</strong>
                                            </td>
                                            <td>@empleado.Dni</td>
                                            <td>
                                                <a href="mailto:@empleado.Email">@empleado.Email</a>
                                            </td>
                                            <td>@empleado.Telefono</td>
                                            <td>
                                                <span class="badge bg-@(empleado.Rol == InmobiliariaGarciaJesus.Models.RolEmpleado.Administrador ? "danger" : "warning")">
                                                    @empleado.RolDescripcion
                                                </span>
                                            </td>
                                            <td>@empleado.FechaIngreso.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <span class="badge bg-@(empleado.Estado ? "success" : "secondary")">
                                                    @(empleado.Estado ? "Activo" : "Inactivo")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="d-flex gap-1">
                                                    <a asp-action="Details" asp-route-id="@empleado.Id" 
                                                       class="btn btn-outline-info btn-sm" title="Ver detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@empleado.Id" 
                                                       class="btn btn-outline-warning btn-sm" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@empleado.Id" 
                                                       class="btn btn-outline-danger btn-sm" title="Eliminar">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-user-tie fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No hay empleados registrados</h5>
                            <p class="text-muted">Comience agregando el primer empleado al sistema.</p>
                            <a asp-action="Create" class="btn btn-success">
                                <i class="fas fa-plus"></i> Crear Primer Empleado
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function limpiarFiltros() {
            document.getElementById('filtroEstado').value = 'true';
            document.getElementById('filtroRol').value = '';
            document.getElementById('filtroBuscar').value = '';
            document.getElementById('filtrosForm').submit();
        }

        // Restaurar valores de filtros desde URL
        document.addEventListener('DOMContentLoaded', function() {
            const urlParams = new URLSearchParams(window.location.search);
            
            const estado = urlParams.get('estado');
            if (estado !== null) {
                document.getElementById('filtroEstado').value = estado;
            }
            
            const rol = urlParams.get('rol');
            if (rol) {
                document.getElementById('filtroRol').value = rol;
            }
            
            const buscar = urlParams.get('buscar');
            if (buscar) {
                document.getElementById('filtroBuscar').value = buscar;
            }
        });
    </script>
}
