@model IEnumerable<InmobiliariaGarciaJesus.Models.Empleado>
@{
    ViewData["Title"] = "Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-user-tie"></i> Gestión de Empleados</h2>
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus"></i> Nuevo Empleado
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Lista de Empleados</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Nombre Completo</th>
                                        <th>DNI</th>
                                        <th>Email</th>
                                        <th>Teléfono</th>
                                        <th>Rol</th>
                                        <th>Fecha Ingreso</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var empleado in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@empleado.NombreCompleto</strong>
                                            </td>
                                            <td>@empleado.Dni</td>
                                            <td>
                                                <a href="mailto:@empleado.Email">@empleado.Email</a>
                                            </td>
                                            <td>@empleado.Telefono</td>
                                            <td>
                                                <span class="badge bg-@(empleado.Rol == InmobiliariaGarciaJesus.Models.RolEmpleado.Administrador ? "danger" : "warning")">
                                                    @empleado.RolDescripcion
                                                </span>
                                            </td>
                                            <td>@empleado.FechaIngreso.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <span class="badge bg-@(empleado.Estado ? "success" : "secondary")">
                                                    @(empleado.Estado ? "Activo" : "Inactivo")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@empleado.Id" 
                                                       class="btn btn-info btn-sm" title="Ver detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@empleado.Id" 
                                                       class="btn btn-warning btn-sm" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@empleado.Id" 
                                                       class="btn btn-danger btn-sm" title="Eliminar">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-user-tie fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No hay empleados registrados</h5>
                            <p class="text-muted">Comience agregando el primer empleado al sistema.</p>
                            <a asp-action="Create" class="btn btn-success">
                                <i class="fas fa-plus"></i> Crear Primer Empleado
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
