@model InmobiliariaGarciaJesus.Models.Inmueble

@{
    ViewData["Title"] = "Detalles del Inmueble";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-info-circle"></i> Detalles del Inmueble</h2>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <!-- Galería de Imágenes -->
                        <div class="col-12 mb-4">
                            <h5><i class="fas fa-images"></i> Galería de Imágenes</h5>
                            <div id="imagenes-container">
                                <!-- Las imágenes se cargarán aquí via AJAX -->
                            </div>
                        </div>

                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Direccion)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Direccion)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Tipo)</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@Html.DisplayFor(model => model.Tipo)</span>
                                </dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Uso)</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-secondary">@Html.DisplayFor(model => model.Uso)</span>
                                </dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Ambientes)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Ambientes)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Superficie)</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Superficie.HasValue)
                                    {
                                        @Model.Superficie.Value.ToString("N2") <text>m²</text>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No especificado</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Precio)</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Precio.HasValue)
                                    {
                                        <span class="text-success fw-bold">$@Model.Precio.Value.ToString("N0")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No especificado</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Propietario</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Propietario != null)
                                    {
                                        <span class="fw-bold">@Model.Propietario.Nombre @Model.Propietario.Apellido</span><br>
                                        <small class="text-muted">Email: @Model.Propietario.Email</small>
                                        @if (!string.IsNullOrEmpty(Model.Propietario.Telefono))
                                        {
                                            <br><small class="text-muted">Tel: @Model.Propietario.Telefono</small>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">No especificado</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Latitud)</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Latitud.HasValue)
                                    {
                                        @Model.Latitud.Value.ToString("F6")
                                    }
                                    else
                                    {
                                        <span class="text-muted">No especificado</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Longitud)</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Longitud.HasValue)
                                    {
                                        @Model.Longitud.Value.ToString("F6")
                                    }
                                    else
                                    {
                                        <span class="text-muted">No especificado</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FechaCreacion)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaCreacion)</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            cargarImagenes();
        });

        function cargarImagenes() {
            $.get('@Url.Action("GetImagenes", "Inmuebles")', { id: @Model.Id, readOnly: true })
                .done(function(data) {
                    $('#imagenes-container').html(data);
                })
                .fail(function() {
                    $('#imagenes-container').html('<div class="col-12 text-center text-danger"><i class="fas fa-exclamation-triangle"></i> Error al cargar imágenes</div>');
                });
        }
    </script>
}
