@model InmobiliariaGarciaJesus.Models.Inmueble
@using InmobiliariaGarciaJesus.Models

@{
    ViewData["Title"] = "Detalles del Inmueble";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-info-circle"></i> Detalles del Inmueble</h2>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <!-- Galería de Imágenes -->
                        <div class="col-12 mb-4">
                            <h5><i class="fas fa-images"></i> Galería de Imágenes</h5>
                            <div id="imagenes-container">
                                <!-- Las imágenes se cargarán aquí via AJAX -->
                            </div>
                        </div>

                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Direccion)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Direccion)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Localidad)</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Localidad))
                                    {
                                        @Model.Localidad
                                    }
                                    else
                                    {
                                        <span class="text-muted">No especificado</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Provincia)</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.Provincia))
                                    {
                                        @Model.Provincia
                                    }
                                    else
                                    {
                                        <span class="text-muted">No especificado</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Tipo)</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@Html.DisplayFor(model => model.Tipo)</span>
                                </dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Uso)</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-secondary">@Html.DisplayFor(model => model.Uso)</span>
                                </dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Ambientes)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Ambientes)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Superficie)</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Superficie.HasValue)
                                    {
                                        @Model.Superficie.Value.ToString("N2") <text>m²</text>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No especificado</span>
                                    }
                                </dd>
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Estado)</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Estado == EstadoInmueble.Activo)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactivo</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Precio)</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Precio.HasValue)
                                    {
                                        <span class="text-success fw-bold">$@Model.Precio.Value.ToString("N0")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No especificado</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Propietario</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Propietario != null)
                                    {
                                        <span class="fw-bold">@Model.Propietario.Nombre @Model.Propietario.Apellido</span><br>
                                        <small class="text-muted">Email: @Model.Propietario.Email</small>
                                        @if (!string.IsNullOrEmpty(Model.Propietario.Telefono))
                                        {
                                            <br><small class="text-muted">Tel: @Model.Propietario.Telefono</small>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">No especificado</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Coordenadas</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Latitud.HasValue && Model.Longitud.HasValue)
                                    {
                                        <div>
                                            <strong>Lat:</strong> @Model.Latitud.Value.ToString("F6")<br>
                                            <strong>Lng:</strong> @Model.Longitud.Value.ToString("F6")
                                        </div>
                                        <div class="mt-2">
                                            <a href="@Model.GoogleMapsUrl" target="_blank" class="btn btn-primary btn-sm">
                                                <i class="fas fa-map-marker-alt"></i> Ver en Google Maps
                                            </a>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No especificado</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FechaCreacion)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaCreacion)</dd>
                            </dl>
                        </div>
                    </div>

                    @if (Model.Latitud.HasValue && Model.Longitud.HasValue)
                    {
                        <!-- Sección del Mapa -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5><i class="fas fa-map-marked-alt"></i> Ubicación del Inmueble</h5>
                                    </div>
                                    <div class="card-body p-0">
                                        <div id="map" style="height: 400px; width: 100%;"></div>
                                    </div>
                                    <div class="card-footer text-center">
                                        <a href="@Model.GoogleMapsUrl" target="_blank" class="btn btn-primary">
                                            <i class="fas fa-external-link-alt"></i> Abrir en Google Maps
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            cargarImagenes();
        });

        function cargarImagenes() {
            $.get('@Url.Action("GetImagenes", "Inmuebles")', { id: @Model.Id, readOnly: true })
                .done(function(data) {
                    $('#imagenes-container').html(data);
                })
                .fail(function() {
                    $('#imagenes-container').html('<div class="col-12 text-center text-danger"><i class="fas fa-exclamation-triangle"></i> Error al cargar imágenes</div>');
                });
        }

        // Google Maps functionality
        @if (Model.Latitud.HasValue && Model.Longitud.HasValue)
        {
            <text>
        function initMap() {
            var location = { lat: @Model.Latitud.Value.ToString(System.Globalization.CultureInfo.InvariantCulture), lng: @Model.Longitud.Value.ToString(System.Globalization.CultureInfo.InvariantCulture) };
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 16,
                center: location,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            });
            
            var marker = new google.maps.Marker({
                position: location,
                map: map,
                title: '@Html.Raw(Model.Direccion?.Replace("'", "\\'"))',
                animation: google.maps.Animation.DROP
            });

            var infoWindow = new google.maps.InfoWindow({
                content: '<div><strong>@Html.Raw(Model.Direccion?.Replace("'", "\\'"))</strong><br>' +
                        '@if (!string.IsNullOrEmpty(Model.Localidad)) { <text>@Html.Raw(Model.Localidad?.Replace("'", "\\'"))</text> }' +
                        '@if (!string.IsNullOrEmpty(Model.Provincia)) { <text>, @Html.Raw(Model.Provincia?.Replace("'", "\\'"))</text> }</div>'
            });

            marker.addListener('click', function() {
                infoWindow.open(map, marker);
            });

            // Mostrar info window por defecto
            infoWindow.open(map, marker);
        }

        // Cargar Google Maps cuando el documento esté listo
        $(document).ready(function() {
            if (typeof google !== 'undefined' && google.maps) {
                initMap();
            } else {
                // Cargar Google Maps API si no está disponible
                var script = document.createElement('script');
                script.src = 'https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap';
                script.async = true;
                script.defer = true;
                document.head.appendChild(script);
            }
        });
            </text>
        }
    </script>
}
