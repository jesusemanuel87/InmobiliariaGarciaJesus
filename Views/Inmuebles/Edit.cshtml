@model InmobiliariaGarciaJesus.Models.Inmueble
@using System.Linq

@{
    ViewData["Title"] = "Editar Inmueble";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-edit"></i> Editar Inmueble</h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="FechaCreacion" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Direccion" class="form-label"></label>
                                    <input asp-for="Direccion" class="form-control" />
                                    <span asp-validation-for="Direccion" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="Provincia" class="form-label"></label>
                                    <select asp-for="Provincia" id="provinciaSelect" class="form-select">
                                        <option value="">Cargando provincias...</option>
                                    </select>
                                    <span asp-validation-for="Provincia" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="Localidad" class="form-label"></label>
                                    <select asp-for="Localidad" id="localidadSelect" class="form-select">
                                        <option value="">Seleccione primero una provincia</option>
                                    </select>
                                    <span asp-validation-for="Localidad" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Ambientes" class="form-label"></label>
                                    <input asp-for="Ambientes" class="form-control" type="number" min="1" max="50" />
                                    <span asp-validation-for="Ambientes" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Superficie" class="form-label"></label>
                                    <input asp-for="Superficie" class="form-control" type="number" step="0.01" min="1" max="10000" />
                                    <span asp-validation-for="Superficie" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Precio" class="form-label"></label>
                                    <input asp-for="Precio" class="form-control" type="number" step="0.01" min="0" />
                                    <span asp-validation-for="Precio" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Tipo" class="form-label"></label>
                                    <select asp-for="Tipo" class="form-select" asp-items="Html.GetEnumSelectList<InmobiliariaGarciaJesus.Models.TipoInmueble>()">
                                        <option value="">Seleccionar tipo...</option>
                                    </select>
                                    <span asp-validation-for="Tipo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Uso" class="form-label"></label>
                                    <select asp-for="Uso" class="form-select" asp-items="Html.GetEnumSelectList<InmobiliariaGarciaJesus.Models.UsoInmueble>()">
                                        <option value="">Seleccionar uso...</option>
                                    </select>
                                    <span asp-validation-for="Uso" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="PropietarioId" class="form-label"></label>
                                    <select asp-for="PropietarioId" class="form-select">
                                        <option value="">Seleccionar propietario...</option>
                                        @foreach (var propietario in (ViewBag.Propietarios as IEnumerable<InmobiliariaGarciaJesus.Models.Propietario>) ?? Enumerable.Empty<InmobiliariaGarciaJesus.Models.Propietario>())
                                        {
                                            <option value="@propietario.Id">@propietario.Nombre @propietario.Apellido</option>
                                        }
                                    </select>
                                    <span asp-validation-for="PropietarioId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Estado" class="form-label"></label>
                                    <select asp-for="Estado" class="form-select" asp-items="Html.GetEnumSelectList<InmobiliariaGarciaJesus.Models.EstadoInmueble>()">
                                        <option value="">Seleccionar estado...</option>
                                    </select>
                                    <span asp-validation-for="Estado" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Latitud" class="form-label"></label>
                                    <div class="input-group">
                                        <input asp-for="Latitud" class="form-control" type="number" step="any" placeholder="Ej: -33.4489" />
                                        @if (Model.GoogleMapsUrl != null)
                                        {
                                            <a href="@Model.GoogleMapsUrl" target="_blank" class="btn btn-outline-primary" title="Ver en Google Maps">
                                                <i class="fas fa-map-marker-alt"></i>
                                            </a>
                                        }
                                    </div>
                                    <span asp-validation-for="Latitud" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Longitud" class="form-label"></label>
                                    <input asp-for="Longitud" class="form-control" type="number" step="any" placeholder="Ej: -70.6693" />
                                    <span asp-validation-for="Longitud" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        @if (Model.Latitud.HasValue && Model.Longitud.HasValue)
                        {
                            <div class="row">
                                <div class="col-12">
                                    <div class="mb-3">
                                        <label class="form-label">Ubicación en el Mapa</label>
                                        <div class="card">
                                            <div class="card-body p-0">
                                                <div id="map" style="height: 300px; width: 100%;"></div>
                                            </div>
                                            <div class="card-footer text-center">
                                                <a href="@Model.GoogleMapsUrl" target="_blank" class="btn btn-primary btn-sm">
                                                    <i class="fas fa-external-link-alt"></i> Ver en Google Maps
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Guardar Cambios
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Sección de Gestión de Imágenes -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5><i class="fas fa-images"></i> Gestión de Imágenes</h5>
                </div>
                <div class="card-body">
                    <!-- Formulario para subir nuevas imágenes -->
                    <form asp-action="UploadImages" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" class="mb-4">
                        <div class="row">
                            <div class="col-md-8">
                                <label class="form-label">Seleccionar Imágenes</label>
                                <input type="file" name="imagenes" class="form-control" multiple accept="image/*" required />
                                <div class="form-text">Formatos permitidos: JPG, PNG, GIF, WEBP. Tamaño máximo: 5MB por imagen.</div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Descripción (opcional)</label>
                                <input type="text" name="descripciones" class="form-control" placeholder="Descripción de las imágenes" />
                            </div>
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-upload"></i> Subir Imágenes
                            </button>
                        </div>
                    </form>

                    <!-- Galería de imágenes existentes -->
                    <div id="imagenes-galeria">
                        <h6>Imágenes del Inmueble</h6>
                        <div class="row" id="imagenes-container">
                            <!-- Las imágenes se cargarán aquí via AJAX -->
                            <div class="col-12 text-center py-3">
                                <i class="fas fa-spinner fa-spin"></i> Cargando imágenes...
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/shared/google-maps-service.js"></script>
    <script src="~/js/georef-api.js"></script>
    <script src="~/js/Inmueble/edit-inmueble.js"></script>
    <script>
        // Configurar Google Maps API Key
        @if (!string.IsNullOrEmpty(ViewBag.GoogleMapsApiKey as string))
        {
            <text>
            if (window.googleMapsService) {
                window.googleMapsService.setApiKey('@ViewBag.GoogleMapsApiKey');
            }
            </text>
        }

        // Initialize InmuebleEditManager with model data
        inmuebleEditManager = new InmuebleEditManager(
            @Model.Id,
            '@Model.Provincia',
            '@Model.Localidad',
            @(Model.Latitud?.ToString(System.Globalization.CultureInfo.InvariantCulture) ?? "null"),
            @(Model.Longitud?.ToString(System.Globalization.CultureInfo.InvariantCulture) ?? "null"),
            '@Html.Raw(Model.Direccion?.Replace("'", "\\'"))'
        );
    </script>
}
