@model IEnumerable<InmobiliariaGarciaJesus.Models.Inmueble>

@{
    ViewData["Title"] = "Inmuebles";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-home"></i> Inmuebles</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nuevo Inmueble
                </a>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                                        <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                                        <th>@Html.DisplayNameFor(model => model.Ambientes)</th>
                                        <th>@Html.DisplayNameFor(model => model.Superficie)</th>
                                        <th>@Html.DisplayNameFor(model => model.Precio)</th>
                                        <th>@Html.DisplayNameFor(model => model.Uso)</th>
                                        <th>@Html.DisplayNameFor(model => model.Estado)</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                                            <td>
                                                <span class="badge bg-info">@Html.DisplayFor(modelItem => item.Tipo)</span>
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.Ambientes)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Superficie) mÂ²</td>
                                            <td>
                                                @if (item.Precio.HasValue)
                                                {
                                                    <span class="text-success fw-bold">$@item.Precio.Value.ToString("N0")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No especificado</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.Uso)</span>
                                            </td>
                                            <td>
                                                @if (item.Estado == InmobiliariaGarciaJesus.Models.EstadoInmueble.Activo)
                                                {
                                                    <span class="badge bg-success">Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactivo</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm me-1" title="Ver detalles">
                                                        <i class="fas fa-eye me-1"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm me-1" title="Editar">
                                                        <i class="fas fa-edit me-1"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Eliminar">
                                                        <i class="fas fa-trash me-1"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-home fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No hay inmuebles registrados</h4>
                            <p class="text-muted">Comienza agregando tu primer inmueble</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Crear Inmueble
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
