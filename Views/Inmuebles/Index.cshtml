@model InmobiliariaGarciaJesus.Models.Common.PagedResult<InmobiliariaGarciaJesus.Models.Inmueble>

@{
    ViewData["Title"] = "Inmuebles";
}

<!-- Inmuebles Filters CSS -->
<link rel="stylesheet" href="~/css/inmuebles-filters.css">

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-building"></i> Inmuebles</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nuevo Inmueble
                </a>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Filtros -->
            <div class="card shadow mb-3 inmuebles-filters">
                <div class="card-body">
                    <form method="get" id="filtrosForm">
                        <div class="row g-3">
                            <!-- DEBUG: UserRole = @ViewBag.UserRole -->
                            @if (ViewBag.UserRole == "Administrador" || ViewBag.UserRole == "Empleado")
                            {
                                <div class="col-md-2">
                                    <label for="filtroEstado" class="form-label">
                                        <i class="fas fa-toggle-on me-1"></i>Estado
                                    </label>
                                    <select name="estado" id="filtroEstado" class="form-select">
                                        <option value="">Todos los estados</option>
                                        @{
                                            var estadoSeleccionado = ViewBag.EstadoSeleccionado?.ToString();
                                        }
                                        @if (estadoSeleccionado == "Activo")
                                        {
                                            <option value="Activo" selected>Activo</option>
                                        }
                                        else
                                        {
                                            <option value="Activo">Activo</option>
                                        }
                                        @if (estadoSeleccionado == "Inactivo")
                                        {
                                            <option value="Inactivo" selected>Inactivo</option>
                                        }
                                        else
                                        {
                                            <option value="Inactivo">Inactivo</option>
                                        }
                                    </select>
                                </div>
                            }
                            <div class="col-md-2">
                                <label for="filtroTipo" class="form-label">
                                    <i class="fas fa-home me-1"></i>Tipo
                                </label>
                                <select name="tipo" id="filtroTipo" class="form-select">
                                    <option value="">Todos los tipos</option>
                                    @{
                                        var tiposInmueble = ViewBag.TiposInmueble as IEnumerable<dynamic>;
                                    }
                                    @if (tiposInmueble != null)
                                    {
                                        @foreach (var tipo in tiposInmueble)
                                        {
                                            <option value="@tipo.Nombre">@tipo.Nombre</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label for="filtroUso" class="form-label">
                                    <i class="fas fa-tag me-1"></i>Uso
                                </label>
                                <select name="uso" id="filtroUso" class="form-select">
                                    <option value="">Todos los usos</option>
                                    <option value="Residencial">Residencial</option>
                                    <option value="Comercial">Comercial</option>
                                    <option value="Industrial">Industrial</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label for="filtroProvincia" class="form-label">
                                    <i class="fas fa-map-marker-alt me-1"></i>Provincia
                                </label>
                                <select name="provincia" id="filtroProvincia" class="form-select">
                                    <option value="">Cargando provincias...</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label for="filtroLocalidad" class="form-label">
                                    <i class="fas fa-city me-1"></i>Localidad
                                </label>
                                <select name="localidad" id="filtroLocalidad" class="form-select">
                                    <option value="">Seleccione primero una provincia</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label for="disponibilidad" class="form-label">
                                    <i class="fas fa-check-circle me-1"></i>Disponibilidad
                                </label>
                                <div class="dropdown">
                                    <button class="btn btn-outline-secondary dropdown-toggle w-100 text-start" type="button" id="disponibilidadDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                        <span id="disponibilidadPlaceholder">Seleccionar disponibilidad...</span>
                                    </button>
                                    <div class="dropdown-menu w-100" aria-labelledby="disponibilidadDropdown" id="disponibilidadDropdownMenu">
                                        <div class="form-check dropdown-item-text border-bottom">
                                            <input class="form-check-input" type="checkbox" id="disponibilidadTodos">
                                            <label class="form-check-label" for="disponibilidadTodos">
                                                <strong>Todos</strong>
                                            </label>
                                        </div>
                                        <div class="form-check dropdown-item-text">
                                            <input class="form-check-input" type="checkbox" name="disponibilidad" value="Disponible" id="disponibilidadDisponible">
                                            <label class="form-check-label" for="disponibilidadDisponible">
                                                Disponible
                                            </label>
                                        </div>
                                        <div class="form-check dropdown-item-text">
                                            <input class="form-check-input" type="checkbox" name="disponibilidad" value="Reservado" id="disponibilidadReservado">
                                            <label class="form-check-label" for="disponibilidadReservado">
                                                Reservado
                                            </label>
                                        </div>
                                        <div class="form-check dropdown-item-text">
                                            <input class="form-check-input" type="checkbox" name="disponibilidad" value="NoDisponible" id="disponibilidadNoDisponible">
                                            <label class="form-check-label" for="disponibilidadNoDisponible">
                                                No Disponible
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mt-3">
                            <div class="col-md-4">
                                <label class="form-label">
                                    <i class="fas fa-calendar-alt me-1"></i>Disponibilidad para Alquiler
                                </label>
                                <div class="row">
                                    <div class="col-6">
                                        <label for="fechaDesde" class="form-label small">Desde</label>
                                        <input type="date" name="fechaDesde" id="fechaDesde" class="form-control" 
                                               value="@ViewBag.FechaDesde" />
                                    </div>
                                    <div class="col-6">
                                        <label for="fechaHasta" class="form-label small">Hasta</label>
                                        <input type="date" name="fechaHasta" id="fechaHasta" class="form-control" 
                                               value="@ViewBag.FechaHasta" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">
                                    <i class="fas fa-dollar-sign me-1"></i>Rango de Precio
                                </label>
                                <div class="row">
                                    <div class="col-6">
                                        <label for="precioMin" class="form-label small">$ Mínimo</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input type="number" name="precioMin" id="precioMin" class="form-control" 
                                                   placeholder="Precio mínimo" value="@ViewBag.PrecioMin" 
                                                   min="@ViewBag.PrecioMinimo" />
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <label for="precioMax" class="form-label small">$ Máximo</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input type="number" name="precioMax" id="precioMax" class="form-control" 
                                                   placeholder="Precio máximo" value="@ViewBag.PrecioMax" 
                                                   min="@ViewBag.PrecioMinimo" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 d-flex align-items-end">
                                <button type="button" id="limpiarFiltros" class="btn btn-outline-secondary me-2">
                                    <i class="fas fa-eraser me-1"></i>Limpiar Filtros
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search me-1"></i>Buscar
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info de paginación -->
            @if (Model.TotalCount > 0)
            {
                <div class="alert alert-info d-flex justify-content-between align-items-center">
                    <div>
                        <i class="fas fa-info-circle me-2"></i>
                        Mostrando <strong>@Model.FirstItemIndex</strong> - <strong>@Model.LastItemIndex</strong> de <strong>@Model.TotalCount</strong> inmuebles
                    </div>
                    <div>
                        <span class="badge bg-primary">Página @Model.Page de @Model.TotalPages</span>
                    </div>
                </div>
            }

            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>Resultados 
                        <span class="badge bg-primary">@Model.Items.Count() inmuebles en página actual</span>
                    </h5>
                    @if (ViewBag.UserRole == "Inquilino")
                    {
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>Mostrando solo inmuebles activos
                        </small>
                    }
                </div>
                <div class="card-body">
                    @if (Model.Items.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Imagen</th>
                                        <th>@Html.DisplayNameFor(model => model.Items.FirstOrDefault().Direccion)</th>
                                        <th>Ubicación</th>
                                        <th>@Html.DisplayNameFor(model => model.Items.FirstOrDefault().Tipo)</th>
                                        <th>@Html.DisplayNameFor(model => model.Items.FirstOrDefault().Ambientes)</th>
                                        <th>@Html.DisplayNameFor(model => model.Items.FirstOrDefault().Precio)</th>
                                        <th>@Html.DisplayNameFor(model => model.Items.FirstOrDefault().Uso)</th>
                                        <th>@Html.DisplayNameFor(model => model.Items.FirstOrDefault().Estado)</th>
                                        <th>Disponibilidad</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>
                                                <div class="inmueble-imagen-container" style="width: 80px; height: 60px;">
                                                    @if (!string.IsNullOrEmpty(item.ImagenPortadaUrl))
                                                    {
                                                        <img src="@item.ImagenPortadaUrl" alt="@item.Direccion" 
                                                             class="img-fluid rounded shadow-sm" 
                                                             style="width: 100%; height: 100%; object-fit: cover;" />
                                                    }
                                                    else
                                                    {
                                                        <div class="d-flex align-items-center justify-content-center h-100 bg-light rounded border">
                                                            <i class="fas fa-home text-muted"></i>
                                                        </div>
                                                    }
                                                </div>
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                                            <td>
                                                <div>
                                                    @if (!string.IsNullOrEmpty(item.Localidad))
                                                    {
                                                        <small class="text-muted">@item.Localidad</small>
                                                    }
                                                    @if (!string.IsNullOrEmpty(item.Provincia))
                                                    {
                                                        <br><small class="text-muted">@item.Provincia</small>
                                                    }
                                                    @if (item.GoogleMapsUrl != null)
                                                    {
                                                        <br><a href="@item.GoogleMapsUrl" target="_blank" class="btn btn-outline-primary btn-sm mt-1" title="Ver en Google Maps">
                                                            <i class="fas fa-map-marker-alt"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@(item.Tipo?.Nombre ?? "Sin tipo")</span>
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.Ambientes)</td>
                                            <td>
                                                @if (item.Precio.HasValue)
                                                {
                                                    <span class="text-success fw-bold">$@item.Precio.Value.ToString("N0")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No especificado</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.Uso)</span>
                                            </td>
                                            <td>
                                                @if (item.Estado == InmobiliariaGarciaJesus.Models.EstadoInmueble.Activo)
                                                {
                                                    <span class="badge bg-success">Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactivo</span>
                                                }
                                            </td>
                                            <td>
                                                @{
                                                    var estadosDisponibilidad = ViewBag.EstadosDisponibilidad as Dictionary<int, string>;
                                                    var estadoDisponibilidad = estadosDisponibilidad?.GetValueOrDefault(item.Id, "Disponible") ?? "Disponible";
                                                }
                                                @if (estadoDisponibilidad == "Disponible")
                                                {
                                                    <span class="badge bg-success">Disponible</span>
                                                }
                                                else if (estadoDisponibilidad == "Reservado")
                                                {
                                                    <span class="badge bg-warning text-dark">Reservado</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">No Disponible</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm me-1" title="Ver detalles">
                                                        <i class="fas fa-eye me-1"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm me-1" title="Editar">
                                                        <i class="fas fa-edit me-1"></i>
                                                    </a>
                                                    @if (ViewBag.UserRole == "Administrador")
                                                    {
                                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Eliminar">
                                                            <i class="fas fa-trash me-1"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Controles de paginación -->
                        @if (Model.TotalPages > 1)
                        {
                            <nav aria-label="Paginación de inmuebles" class="mt-4">
                                <ul class="pagination justify-content-center">
                                    <!-- Botón Anterior -->
                                    @if (Model.HasPreviousPage)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Index", new { 
                                                page = Model.Page - 1,
                                                estado = ViewBag.EstadoSeleccionado,
                                                tipo = ViewBag.TipoSeleccionado,
                                                uso = ViewBag.UsoSeleccionado,
                                                provincia = ViewBag.ProvinciaSeleccionada,
                                                localidad = ViewBag.LocalidadSeleccionada,
                                                precioMin = ViewBag.PrecioMin,
                                                precioMax = ViewBag.PrecioMax,
                                                disponibilidad = ViewBag.DisponibilidadSeleccionada
                                            })">
                                                <i class="fas fa-chevron-left"></i> Anterior
                                            </a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link"><i class="fas fa-chevron-left"></i> Anterior</span>
                                        </li>
                                    }

                                    <!-- Números de página -->
                                    @{
                                        var startPage = Math.Max(1, Model.Page - 2);
                                        var endPage = Math.Min(Model.TotalPages, Model.Page + 2);
                                        
                                        // Ajustar si estamos cerca del inicio
                                        if (Model.Page <= 3)
                                        {
                                            endPage = Math.Min(5, Model.TotalPages);
                                        }
                                        // Ajustar si estamos cerca del final
                                        if (Model.Page > Model.TotalPages - 3)
                                        {
                                            startPage = Math.Max(1, Model.TotalPages - 4);
                                        }
                                    }

                                    <!-- Primera página si no está visible -->
                                    @if (startPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Index", new { 
                                                page = 1,
                                                estado = ViewBag.EstadoSeleccionado,
                                                tipo = ViewBag.TipoSeleccionado,
                                                uso = ViewBag.UsoSeleccionado,
                                                provincia = ViewBag.ProvinciaSeleccionada,
                                                localidad = ViewBag.LocalidadSeleccionada,
                                                precioMin = ViewBag.PrecioMin,
                                                precioMax = ViewBag.PrecioMax,
                                                disponibilidad = ViewBag.DisponibilidadSeleccionada
                                            })">1</a>
                                        </li>
                                        @if (startPage > 2)
                                        {
                                            <li class="page-item disabled"><span class="page-link">...</span></li>
                                        }
                                    }

                                    <!-- Páginas visibles -->
                                    @for (int i = startPage; i <= endPage; i++)
                                    {
                                        <li class="page-item @(i == Model.Page ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("Index", new { 
                                                page = i,
                                                estado = ViewBag.EstadoSeleccionado,
                                                tipo = ViewBag.TipoSeleccionado,
                                                uso = ViewBag.UsoSeleccionado,
                                                provincia = ViewBag.ProvinciaSeleccionada,
                                                localidad = ViewBag.LocalidadSeleccionada,
                                                precioMin = ViewBag.PrecioMin,
                                                precioMax = ViewBag.PrecioMax,
                                                disponibilidad = ViewBag.DisponibilidadSeleccionada
                                            })">@i</a>
                                        </li>
                                    }

                                    <!-- Última página si no está visible -->
                                    @if (endPage < Model.TotalPages)
                                    {
                                        @if (endPage < Model.TotalPages - 1)
                                        {
                                            <li class="page-item disabled"><span class="page-link">...</span></li>
                                        }
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Index", new { 
                                                page = Model.TotalPages,
                                                estado = ViewBag.EstadoSeleccionado,
                                                tipo = ViewBag.TipoSeleccionado,
                                                uso = ViewBag.UsoSeleccionado,
                                                provincia = ViewBag.ProvinciaSeleccionada,
                                                localidad = ViewBag.LocalidadSeleccionada,
                                                precioMin = ViewBag.PrecioMin,
                                                precioMax = ViewBag.PrecioMax,
                                                disponibilidad = ViewBag.DisponibilidadSeleccionada
                                            })">@Model.TotalPages</a>
                                        </li>
                                    }

                                    <!-- Botón Siguiente -->
                                    @if (Model.HasNextPage)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Index", new { 
                                                page = Model.Page + 1,
                                                estado = ViewBag.EstadoSeleccionado,
                                                tipo = ViewBag.TipoSeleccionado,
                                                uso = ViewBag.UsoSeleccionado,
                                                provincia = ViewBag.ProvinciaSeleccionada,
                                                localidad = ViewBag.LocalidadSeleccionada,
                                                precioMin = ViewBag.PrecioMin,
                                                precioMax = ViewBag.PrecioMax,
                                                disponibilidad = ViewBag.DisponibilidadSeleccionada
                                            })">
                                                Siguiente <i class="fas fa-chevron-right"></i>
                                            </a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">Siguiente <i class="fas fa-chevron-right"></i></span>
                                        </li>
                                    }
                                </ul>
                            </nav>

                            <!-- Info adicional en desarrollo -->
                            @if (Context.GetEndpoint()?.Metadata?.GetMetadata<Microsoft.AspNetCore.Mvc.Infrastructure.IActionDescriptorCollectionProvider>() != null)
                            {
                                <div class="text-center text-muted small mt-3">
                                    <i class="fas fa-bolt text-warning"></i>
                                    <strong>Optimización Backend:</strong> Solo se cargaron @Model.Items.Count() inmuebles de @Model.TotalCount total
                                </div>
                            }
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-search fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No se encontraron inmuebles</h4>
                            <p class="text-muted">
                                @if (Context.Request.Query.Count > 0)
                                {
                                    <span>No hay inmuebles que coincidan con los filtros aplicados.</span><br>
                                    <span>Intenta ajustar los criterios de búsqueda.</span>
                                }
                                else
                                {
                                    <span>No hay inmuebles registrados en el sistema.</span><br>
                                    <span>Comienza agregando tu primer inmueble.</span>
                                }
                            </p>
                            @if (Context.Request.Query.Count > 0)
                            {
                                <button type="button" id="limpiarFiltrosEmpty" class="btn btn-outline-secondary me-2">
                                    <i class="fas fa-eraser me-1"></i>Limpiar Filtros
                                </button>
                            }
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Crear Inmueble
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/georef-api.js"></script>
    <script src="~/js/Inmueble/inmueble-filters.js"></script>
    
    <!-- Hidden inputs for ViewBag values -->
    <input type="hidden" id="estadoActual" value="@ViewBag.EstadoSeleccionado" />
    <input type="hidden" id="tipoActual" value="@ViewBag.TipoSeleccionado" />
    <input type="hidden" id="usoActual" value="@ViewBag.UsoSeleccionado" />
    <input type="hidden" id="provinciaActual" value="@ViewBag.ProvinciaSeleccionada" />
    <input type="hidden" id="localidadActual" value="@ViewBag.LocalidadSeleccionada" />
    <input type="hidden" id="disponibleActual" value="@ViewBag.DisponibleSeleccionado" />
    <input type="hidden" id="userRole" value="@ViewBag.UserRole" />
    <input type="hidden" id="canViewAllStates" value="@ViewBag.CanViewAllStates" />
}
