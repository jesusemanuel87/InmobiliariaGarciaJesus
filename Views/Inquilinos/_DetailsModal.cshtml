@model InmobiliariaGarciaJesus.Models.Inquilino

<div class="modal fade" id="detailsInquilinoModal" tabindex="-1" aria-labelledby="detailsInquilinoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="detailsInquilinoModalLabel">
                    <i class="fas fa-user"></i> Detalles del Inquilino
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted">
                                <i class="fas fa-user"></i> Nombre
                            </label>
                            <p class="form-control-plaintext border-bottom">@Html.DisplayFor(model => model.Nombre)</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted">
                                <i class="fas fa-user"></i> Apellido
                            </label>
                            <p class="form-control-plaintext border-bottom">@Html.DisplayFor(model => model.Apellido)</p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted">
                                <i class="fas fa-id-card"></i> DNI
                            </label>
                            <p class="form-control-plaintext border-bottom">@Html.DisplayFor(model => model.Dni)</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted">
                                <i class="fas fa-phone"></i> Teléfono
                            </label>
                            <p class="form-control-plaintext border-bottom">@Html.DisplayFor(model => model.Telefono)</p>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold text-muted">
                        <i class="fas fa-envelope"></i> Email
                    </label>
                    <p class="form-control-plaintext border-bottom">@Html.DisplayFor(model => model.Email)</p>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold text-muted">
                        <i class="fas fa-user-tag"></i> Nombre Completo
                    </label>
                    <p class="form-control-plaintext border-bottom">@Html.DisplayFor(model => model.NombreCompleto)</p>
                </div>

                @if (!string.IsNullOrEmpty(Model.Direccion))
                {
                    <div class="mb-3">
                        <label class="form-label fw-bold text-muted">
                            <i class="fas fa-map-marker-alt"></i> Dirección
                        </label>
                        <p class="form-control-plaintext border-bottom">@Html.DisplayFor(model => model.Direccion)</p>
                    </div>
                }

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted">
                                <i class="fas fa-calendar"></i> Fecha de Creación
                            </label>
                            <p class="form-control-plaintext border-bottom">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted">
                                <i class="fas fa-toggle-on"></i> Estado
                            </label>
                            <p class="form-control-plaintext border-bottom">
                                @if (Model.Estado)
                                {
                                    <span class="badge bg-success fs-6">
                                        <i class="fas fa-check-circle"></i> Activo
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary fs-6">
                                        <i class="fas fa-times-circle"></i> Inactivo
                                    </span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Cerrar
                </button>
                <button type="button" class="btn btn-warning" onclick="showEditFromDetails(@Model.Id)">
                    <i class="fas fa-edit"></i> Editar
                </button>
            </div>
        </div>
    </div>
</div>
