@model InmobiliariaGarciaJesus.Models.Pago

@{
    ViewData["Title"] = "Eliminar Pago";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-trash text-danger"></i> Eliminar Pago #@Model.Numero</h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a Pagos
                </a>
            </div>

            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>¿Estás seguro de que deseas eliminar este pago?</strong>
                <br>Esta acción no se puede deshacer.
            </div>

            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle"></i> Información del Pago a Eliminar
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">
                                    <i class="fas fa-hashtag"></i> @Html.DisplayNameFor(model => model.Numero):
                                </dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-primary fs-6">#@Model.Numero</span>
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fas fa-dollar-sign"></i> @Html.DisplayNameFor(model => model.Importe):
                                </dt>
                                <dd class="col-sm-8">
                                    <strong class="text-success fs-5">$@Model.Importe.ToString("N0")</strong>
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fas fa-file-contract"></i> @Html.DisplayNameFor(model => model.ContratoId):
                                </dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">
                                        <i class="fas fa-link"></i> Contrato #@Model.ContratoId
                                    </span>
                                </dd>
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">
                                    <i class="fas fa-flag"></i> @Html.DisplayNameFor(model => model.Estado):
                                </dt>
                                <dd class="col-sm-8">
                                    @switch (Model.Estado)
                                    {
                                        case InmobiliariaGarciaJesus.Models.EstadoPago.Pendiente:
                                            <span class="badge bg-warning text-dark fs-6">
                                                <i class="fas fa-clock"></i> Pendiente
                                            </span>
                                            break;
                                        case InmobiliariaGarciaJesus.Models.EstadoPago.Pagado:
                                            <span class="badge bg-success fs-6">
                                                <i class="fas fa-check"></i> Pagado
                                            </span>
                                            break;
                                        case InmobiliariaGarciaJesus.Models.EstadoPago.Vencido:
                                            <span class="badge bg-danger fs-6">
                                                <i class="fas fa-exclamation-triangle"></i> Vencido
                                            </span>
                                            break;
                                    }
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fas fa-calendar-check"></i> @Html.DisplayNameFor(model => model.FechaPago):
                                </dt>
                                <dd class="col-sm-8">
                                    @if (Model.FechaPago.HasValue)
                                    {
                                        <span class="text-success">
                                            <i class="fas fa-check-circle"></i>
                                            @Model.FechaPago.Value.ToString("dd/MM/yyyy")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">
                                            <i class="fas fa-calendar-times"></i> Sin fecha de pago
                                        </span>
                                    }
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fas fa-plus-circle"></i> @Html.DisplayNameFor(model => model.FechaCreacion):
                                </dt>
                                <dd class="col-sm-8">
                                    <small class="text-muted">
                                        @Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input asp-for="Id" type="hidden" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Confirmar Eliminación
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
