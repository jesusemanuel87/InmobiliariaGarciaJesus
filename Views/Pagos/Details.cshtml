@model InmobiliariaGarciaJesus.Models.Pago

@{
    ViewData["Title"] = "Detalles del Pago";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-info-circle"></i> Detalles del Pago #@Model.Numero</h2>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver a Pagos
                    </a>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="card-title mb-3">
                                <i class="fas fa-money-bill-wave text-primary"></i> Informaci√≥n del Pago
                            </h5>
                            
                            <dl class="row">
                                <dt class="col-sm-4">
                                    <i class="fas fa-hashtag"></i> @Html.DisplayNameFor(model => model.Numero):
                                </dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-primary fs-6">#@Model.Numero</span>
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fas fa-dollar-sign"></i> @Html.DisplayNameFor(model => model.Importe):
                                </dt>
                                <dd class="col-sm-8">
                                    <strong class="text-success fs-5">$@Model.Importe.ToString("N0")</strong>
                                </dd>

                                @if (Model.Intereses > 0)
                                {
                                    <dt class="col-sm-4">
                                        <i class="fas fa-percentage text-warning"></i> Intereses:
                                    </dt>
                                    <dd class="col-sm-8">
                                        <strong class="text-warning fs-5">$@Model.Intereses.ToString("N0")</strong>
                                    </dd>
                                }

                                @if (Model.Multas > 0)
                                {
                                    <dt class="col-sm-4">
                                        <i class="fas fa-exclamation-triangle text-danger"></i> Multas:
                                    </dt>
                                    <dd class="col-sm-8">
                                        <strong class="text-danger fs-5">$@Model.Multas.ToString("N0")</strong>
                                    </dd>
                                }

                                <dt class="col-sm-4">
                                    <i class="fas fa-calculator text-primary"></i> Total a Pagar:
                                </dt>
                                <dd class="col-sm-8">
                                    <strong class="text-primary fs-4">$@Model.TotalAPagar.ToString("N0")</strong>
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fas fa-flag"></i> @Html.DisplayNameFor(model => model.Estado):
                                </dt>
                                <dd class="col-sm-8">
                                    @switch (Model.Estado)
                                    {
                                        case InmobiliariaGarciaJesus.Models.EstadoPago.Pendiente:
                                            <span class="badge bg-warning text-dark fs-6">
                                                <i class="fas fa-clock"></i> Pendiente
                                            </span>
                                            break;
                                        case InmobiliariaGarciaJesus.Models.EstadoPago.Pagado:
                                            <span class="badge bg-success fs-6">
                                                <i class="fas fa-check"></i> Pagado
                                            </span>
                                            break;
                                        case InmobiliariaGarciaJesus.Models.EstadoPago.Vencido:
                                            <span class="badge bg-danger fs-6">
                                                <i class="fas fa-exclamation-triangle"></i> Vencido
                                            </span>
                                            break;
                                    }
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fas fa-credit-card"></i> M√©todo de Pago:
                                </dt>
                                <dd class="col-sm-8">
                                    @if (Model.MetodoPago.HasValue)
                                    {
                                        @switch (Model.MetodoPago.Value)
                                        {
                                            case InmobiliariaGarciaJesus.Models.MetodoPago.MercadoPago:
                                                <span class="badge bg-primary fs-6">üí≥ MercadoPago</span>
                                                break;
                                            case InmobiliariaGarciaJesus.Models.MetodoPago.Transferencia:
                                                <span class="badge bg-info fs-6">üè¶ Transferencia</span>
                                                break;
                                            case InmobiliariaGarciaJesus.Models.MetodoPago.Efectivo:
                                                <span class="badge bg-success fs-6">üíµ Efectivo</span>
                                                break;
                                            case InmobiliariaGarciaJesus.Models.MetodoPago.Cheque:
                                                <span class="badge bg-warning text-dark fs-6">üìÑ Cheque</span>
                                                break;
                                            case InmobiliariaGarciaJesus.Models.MetodoPago.Otro:
                                                <span class="badge bg-secondary fs-6">üîß Otro</span>
                                                break;
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">
                                            <i class="fas fa-question-circle"></i> Sin m√©todo especificado
                                        </span>
                                    }
                                </dd>
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <h5 class="card-title mb-3">
                                <i class="fas fa-calendar text-info"></i> Fechas
                            </h5>
                            
                            <dl class="row">
                                <dt class="col-sm-4">
                                    <i class="fas fa-calendar-check"></i> @Html.DisplayNameFor(model => model.FechaPago):
                                </dt>
                                <dd class="col-sm-8">
                                    @if (Model.FechaPago.HasValue)
                                    {
                                        <span class="text-success">
                                            <i class="fas fa-check-circle"></i>
                                            @Model.FechaPago.Value.ToString("dd/MM/yyyy")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">
                                            <i class="fas fa-calendar-times"></i> Sin fecha de pago
                                        </span>
                                    }
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fas fa-plus-circle"></i> @Html.DisplayNameFor(model => model.FechaCreacion):
                                </dt>
                                <dd class="col-sm-8">
                                    <small class="text-muted">
                                        @Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="fas fa-file-contract"></i> @Html.DisplayNameFor(model => model.ContratoId):
                                </dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">
                                        <i class="fas fa-link"></i> Contrato #@Model.ContratoId
                                    </span>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Observaciones))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <h5 class="card-title mb-3">
                                    <i class="fas fa-sticky-note text-warning"></i> Observaciones
                                </h5>
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    @Model.Observaciones
                                </div>
                            </div>
                        </div>
                    }

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
