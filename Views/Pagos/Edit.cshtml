@model InmobiliariaGarciaJesus.Models.PagoEditViewModel

@{
    ViewData["Title"] = "Editar Pago";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-edit"></i> Editar Pago #@Model.Numero</h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a Pagos
                </a>
            </div>

            <div class="card shadow">
                <div class="card-body">
                    <!-- Informaci√≥n no editable del pago -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted">Informaci√≥n del Pago</h6>
                            <p><strong>N√∫mero:</strong> #@Model.Numero</p>
                            <p><strong>Contrato:</strong> @Model.ContratoInfo</p>
                            <p><strong>Importe Base:</strong> <span class="text-success">$@Model.Importe.ToString("N0")</span></p>
                            
                            @if (Model.Intereses > 0)
                            {
                                <p><strong>Intereses:</strong> <span class="text-warning">$@Model.Intereses.ToString("N0")</span></p>
                            }
                            
                            @if (Model.Multas > 0)
                            {
                                <p><strong>Multas:</strong> <span class="text-danger">$@Model.Multas.ToString("N0")</span></p>
                            }
                            
                            <p><strong>Total a Pagar:</strong> <span class="text-primary fw-bold fs-5">$@Model.TotalAPagar.ToString("N0")</span></p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Fechas</h6>
                            <p><strong>Fecha de Creaci√≥n:</strong> @Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</p>
                            @if (Model.FechaPago.HasValue)
                            {
                                <p><strong>Fecha de Pago:</strong> @Model.FechaPago.Value.ToString("dd/MM/yyyy")</p>
                            }
                            else
                            {
                                <p><strong>Fecha de Pago:</strong> <span class="text-muted">Sin fecha</span></p>
                            }
                        </div>
                    </div>

                    <hr />

                    <form asp-action="Edit" method="post">
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="Numero" type="hidden" />
                        <input asp-for="ContratoId" type="hidden" />
                        <input asp-for="Importe" type="hidden" />
                        <input asp-for="FechaPago" type="hidden" />
                        <input asp-for="FechaCreacion" type="hidden" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <h6 class="text-primary mb-3">
                            <i class="fas fa-edit me-2"></i>Campos Editables
                        </h6>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Estado" class="form-label">
                                        <i class="fas fa-flag"></i> @Html.DisplayNameFor(model => model.Estado)
                                    </label>
                                    <select asp-for="Estado" class="form-select">
                                        <option value="Pendiente">üïê Pendiente</option>
                                        <option value="Pagado">‚úÖ Pagado</option>
                                        <option value="Vencido">‚ö†Ô∏è Vencido</option>
                                    </select>
                                    <span asp-validation-for="Estado" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="MetodoPago" class="form-label">
                                        <i class="fas fa-credit-card"></i> @Html.DisplayNameFor(model => model.MetodoPago)
                                    </label>
                                    <select asp-for="MetodoPago" class="form-select">
                                        <option value="">Seleccionar m√©todo...</option>
                                        <option value="MercadoPago">üí≥ MercadoPago</option>
                                        <option value="Transferencia">üè¶ Transferencia</option>
                                        <option value="Efectivo">üíµ Efectivo</option>
                                        <option value="Cheque">üìÑ Cheque</option>
                                        <option value="Otro">üîß Otro</option>
                                    </select>
                                    <span asp-validation-for="MetodoPago" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Observaciones" class="form-label">
                                <i class="fas fa-sticky-note"></i> @Html.DisplayNameFor(model => model.Observaciones)
                            </label>
                            <textarea asp-for="Observaciones" class="form-control" rows="3" 
                                      placeholder="Ingrese observaciones sobre el pago..."></textarea>
                            <span asp-validation-for="Observaciones" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
