@model InmobiliariaGarciaJesus.Models.Pago

@{
    ViewData["Title"] = "Editar Pago";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-edit"></i> Editar Pago #@Model.Numero</h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a Pagos
                </a>
            </div>

            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="FechaCreacion" type="hidden" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Numero" class="form-label">
                                        <i class="fas fa-hashtag"></i> @Html.DisplayNameFor(model => model.Numero)
                                    </label>
                                    <input asp-for="Numero" class="form-control" />
                                    <span asp-validation-for="Numero" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ContratoId" class="form-label">
                                        <i class="fas fa-file-contract"></i> @Html.DisplayNameFor(model => model.ContratoId)
                                    </label>
                                    <select asp-for="ContratoId" class="form-select">
                                        @foreach (var contrato in ViewBag.Contratos)
                                        {
                                            <option value="@contrato.Value">@contrato.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="ContratoId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Importe" class="form-label">
                                        <i class="fas fa-dollar-sign"></i> @Html.DisplayNameFor(model => model.Importe)
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Importe" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Importe" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FechaPago" class="form-label">
                                        <i class="fas fa-calendar"></i> @Html.DisplayNameFor(model => model.FechaPago)
                                    </label>
                                    <input asp-for="FechaPago" class="form-control" type="date" />
                                    <span asp-validation-for="FechaPago" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Estado" class="form-label">
                                        <i class="fas fa-flag"></i> @Html.DisplayNameFor(model => model.Estado)
                                    </label>
                                    <select asp-for="Estado" class="form-select">
                                        <option value="Pendiente">üïê Pendiente</option>
                                        <option value="Pagado">‚úÖ Pagado</option>
                                        <option value="Vencido">‚ö†Ô∏è Vencido</option>
                                    </select>
                                    <span asp-validation-for="Estado" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
