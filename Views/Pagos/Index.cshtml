@model IEnumerable<InmobiliariaGarciaJesus.Models.Pago>

@{
    ViewData["Title"] = "Pagos";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-money-bill-wave"></i> Pagos</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nuevo Pago
                </a>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Número</th>
                                        <th>Contrato</th>
                                        <th>Importe</th>
                                        <th>Fecha de Pago</th>
                                        <th>Estado</th>
                                        <th>Fecha de Creación</th>
                                        <th class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pago in Model)
                                    {
                                        <tr>
                                            <td><strong>#@pago.Numero</strong></td>
                                            <td>
                                                <span class="badge bg-info">
                                                    <i class="fas fa-file-contract"></i> Contrato #@pago.ContratoId
                                                </span>
                                            </td>
                                            <td>
                                                <strong class="text-success">
                                                    $@pago.Importe.ToString("N0")
                                                </strong>
                                            </td>
                                            <td>
                                                @if (pago.FechaPago.HasValue)
                                                {
                                                    <span class="text-success">
                                                        <i class="fas fa-calendar-check"></i>
                                                        @pago.FechaPago.Value.ToString("dd/MM/yyyy")
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">
                                                        <i class="fas fa-calendar-times"></i> Sin fecha
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @switch (pago.Estado)
                                                {
                                                    case InmobiliariaGarciaJesus.Models.EstadoPago.Pendiente:
                                                        <span class="badge bg-warning text-dark">
                                                            <i class="fas fa-clock"></i> Pendiente
                                                        </span>
                                                        break;
                                                    case InmobiliariaGarciaJesus.Models.EstadoPago.Pagado:
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-check"></i> Pagado
                                                        </span>
                                                        break;
                                                    case InmobiliariaGarciaJesus.Models.EstadoPago.Vencido:
                                                        <span class="badge bg-danger">
                                                            <i class="fas fa-exclamation-triangle"></i> Vencido
                                                        </span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @pago.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                                                </small>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@pago.Id" 
                                                       class="btn btn-info btn-sm" title="Ver detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@pago.Id" 
                                                       class="btn btn-warning btn-sm" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@pago.Id" 
                                                       class="btn btn-danger btn-sm" title="Eliminar">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-money-bill-wave fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No hay pagos registrados</h5>
                            <p class="text-muted">Comienza creando tu primer pago</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Crear Primer Pago
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
