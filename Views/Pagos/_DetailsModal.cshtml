@model InmobiliariaGarciaJesus.Models.Pago

<div class="modal fade" id="pagoDetailsModal" tabindex="-1" aria-labelledby="pagoDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="pagoDetailsModalLabel">
                    <i class="fas fa-eye"></i> Detalles del Pago
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">ID del Pago:</label>
                            <p class="form-control-plaintext">@Model.Id</p>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Número de Pago:</label>
                            <p class="form-control-plaintext">
                                <span class="badge bg-primary">#@Model.Numero</span>
                            </p>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Contrato ID:</label>
                            <p class="form-control-plaintext">
                                <span class="badge bg-secondary">#@Model.ContratoId</span>
                            </p>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Importe:</label>
                            <p class="form-control-plaintext">
                                <strong class="text-primary">$@Model.Importe.ToString("N0")</strong>
                            </p>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Fecha de Vencimiento:</label>
                            <p class="form-control-plaintext">
                                @if (Model.FechaVencimiento != DateTime.MinValue && Model.FechaVencimiento.Year > 1900)
                                {
                                    <span class="text-info">
                                        <i class="fas fa-calendar-alt"></i> @Model.FechaVencimiento.ToString("dd/MM/yyyy")
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">
                                        <i class="fas fa-calendar-times"></i> Sin fecha
                                    </span>
                                }
                            </p>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Fecha de Pago:</label>
                            <p class="form-control-plaintext">
                                @if (Model.FechaPago.HasValue)
                                {
                                    <span class="text-success">
                                        <i class="fas fa-calendar-check"></i> @Model.FechaPago.Value.ToString("dd/MM/yyyy")
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">
                                        <i class="fas fa-calendar-times"></i> Sin fecha
                                    </span>
                                }
                            </p>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Estado:</label>
                            <p class="form-control-plaintext">
                                @switch (Model.Estado)
                                {
                                    case InmobiliariaGarciaJesus.Models.EstadoPago.Pendiente:
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-clock"></i> Pendiente
                                        </span>
                                        break;
                                    case InmobiliariaGarciaJesus.Models.EstadoPago.Pagado:
                                        <span class="badge bg-success">
                                            <i class="fas fa-check"></i> Pagado
                                        </span>
                                        break;
                                    case InmobiliariaGarciaJesus.Models.EstadoPago.Vencido:
                                        <span class="badge bg-danger">
                                            <i class="fas fa-exclamation-triangle"></i> Vencido
                                        </span>
                                        break;
                                }
                            </p>
                        </div>
                    </div>
                </div>
                
                <hr>
                
                <div class="row">
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Importe Base:</label>
                            <p class="form-control-plaintext">
                                <strong class="text-primary">$@Model.Importe.ToString("N0")</strong>
                            </p>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Multas:</label>
                            <p class="form-control-plaintext">
                                @if (Model.Multas > 0)
                                {
                                    <span class="text-danger">
                                        <i class="fas fa-exclamation-circle"></i> $@Model.Multas.ToString("N0")
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">$0</span>
                                }
                            </p>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Intereses:</label>
                            <p class="form-control-plaintext">
                                @if (Model.Intereses > 0)
                                {
                                    <span class="text-warning">$@Model.Intereses.ToString("N0")</span>
                                }
                                else
                                {
                                    <span class="text-muted">$0</span>
                                }
                            </p>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Total a Pagar:</label>
                            <p class="form-control-plaintext">
                                <strong class="text-success fs-5">$@Model.TotalAPagar.ToString("N0")</strong>
                            </p>
                        </div>
                    </div>
                </div>
                
                @if (Model.FechaPago.HasValue)
                {
                    <hr>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Método de Pago:</label>
                                <p class="form-control-plaintext">
                                    @switch (Model.MetodoPago)
                                    {
                                        case InmobiliariaGarciaJesus.Models.MetodoPago.MercadoPago:
                                            <span class="badge bg-primary">
                                                <i class="fas fa-credit-card"></i> MercadoPago
                                            </span>
                                            break;
                                        case InmobiliariaGarciaJesus.Models.MetodoPago.Transferencia:
                                            <span class="badge bg-info">
                                                <i class="fas fa-exchange-alt"></i> Transferencia
                                            </span>
                                            break;
                                        case InmobiliariaGarciaJesus.Models.MetodoPago.Efectivo:
                                            <span class="badge bg-success">
                                                <i class="fas fa-money-bill"></i> Efectivo
                                            </span>
                                            break;
                                        case InmobiliariaGarciaJesus.Models.MetodoPago.Cheque:
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-money-check"></i> Cheque
                                            </span>
                                            break;
                                        case InmobiliariaGarciaJesus.Models.MetodoPago.Otro:
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-question"></i> Otro
                                            </span>
                                            break;
                                        default:
                                            <span class="text-muted">No especificado</span>
                                            break;
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(Model.Observaciones))
                {
                    <div class="mb-3">
                        <label class="form-label fw-bold">Observaciones:</label>
                        <p class="form-control-plaintext">@Model.Observaciones</p>
                    </div>
                }
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Fecha de Creación:</label>
                            <p class="form-control-plaintext">
                                <small class="text-muted">
                                    <i class="fas fa-calendar-plus"></i> @Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </p>
                        </div>
                    </div>
                    
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Cerrar
                </button>
            </div>
        </div>
    </div>
</div>
