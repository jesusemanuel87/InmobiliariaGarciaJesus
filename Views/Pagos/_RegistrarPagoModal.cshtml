@model PagoRegistroViewModel

<div class="modal fade" id="registrarPagoModal" tabindex="-1" aria-labelledby="registrarPagoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="registrarPagoModalLabel">
                    <i class="fas fa-dollar-sign me-2"></i>Registrar Pago
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            
            <form id="registrarPagoForm" action="/Pagos/RegistrarPago/@Model.Id" method="post">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                
                <div class="modal-body">
                    <!-- Informaci√≥n del Pago -->
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title"><i class="fas fa-info-circle me-2"></i>Informaci√≥n del Pago</h6>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p><strong>N√∫mero de Pago:</strong> #@Model.Numero</p>
                                            <p><strong>@Model.ContratoInfo</strong></p>
                                            <p><strong>Fecha de Vencimiento:</strong> @Model.FechaVencimiento.ToString("dd/MM/yyyy")</p>
                                        </div>
                                        <div class="col-md-6">
                                            <p><strong>Importe:</strong> <span class="text-success fw-bold">$@Model.Importe.ToString("N2")</span></p>
                                            @if (Model.Intereses > 0)
                                            {
                                                <p><strong>Intereses:</strong> <span class="text-warning fw-bold">$@Model.Intereses.ToString("N2")</span></p>
                                            }
                                            @if (Model.Multas > 0)
                                            {
                                                <p><strong>Multas:</strong> <span class="text-danger fw-bold">$@Model.Multas.ToString("N2")</span></p>
                                            }
                                            <hr>
                                            <p><strong>Total a Pagar:</strong> <span class="text-primary fw-bold fs-5">$@Model.TotalAPagar.ToString("N2")</span></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Formulario de Registro -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="MetodoPago" class="form-label">
                                    <i class="fas fa-credit-card me-1"></i>M√©todo de Pago *
                                </label>
                                <select class="form-select" id="MetodoPago" name="MetodoPago" required>
                                    <option value="">Seleccionar m√©todo...</option>
                                    <option value="0">üí≥ MercadoPago</option>
                                    <option value="1">üè¶ Transferencia Bancaria</option>
                                    <option value="2">üíµ Efectivo</option>
                                    <option value="3">üìÑ Cheque</option>
                                    <option value="4">‚ùì Otro</option>
                                </select>
                                <div class="invalid-feedback">
                                    Debe seleccionar un m√©todo de pago.
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="FechaPago" class="form-label">
                                    <i class="fas fa-calendar me-1"></i>Fecha de Pago
                                </label>
                                <input type="date" class="form-control" id="FechaPago" name="FechaPago" 
                                       value="@DateTime.Today.ToString("yyyy-MM-dd")" readonly>
                                <small class="form-text text-muted">Se registrar√° con la fecha actual</small>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3">
                                <label for="Observaciones" class="form-label">
                                    <i class="fas fa-sticky-note me-1"></i>Observaciones
                                </label>
                                <textarea class="form-control" id="Observaciones" name="Observaciones" 
                                          rows="3" maxlength="500" placeholder="Observaciones adicionales (opcional)">@Model.Observaciones</textarea>
                                <div class="form-text">M√°ximo 500 caracteres</div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-dollar-sign me-1"></i>Registrar Pago
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
