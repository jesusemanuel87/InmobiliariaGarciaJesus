@model InmobiliariaGarciaJesus.Models.Propietario

@{
    ViewData["Title"] = "Eliminar Propietario";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="fas fa-exclamation-triangle"></i> Confirmar Eliminación</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-warning"></i> ¿Está seguro que desea eliminar este propietario?
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DNI):</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.DNI)</dd>
                                
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NombreCompleto):</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreCompleto)</dd>
                                
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email):</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Telefono):</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>
                                
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Direccion):</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Direccion)</dd>
                                
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FechaCreacion):</dt>
                                <dd class="col-sm-8">@Model.FechaCreacion.ToString("dd/MM/yyyy")</dd>
                            </dl>
                        </div>
                    </div>

                    @if (Model.Inmuebles != null && Model.Inmuebles.Any())
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="fas fa-exclamation-circle"></i> 
                            <strong>Atención:</strong> Este propietario tiene @Model.Inmuebles.Count() inmueble(s) asociado(s).
                        </div>
                    }

                    <form asp-action="Delete" class="text-center mt-4">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="fas fa-trash"></i> Confirmar Eliminación
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Cancelar
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
