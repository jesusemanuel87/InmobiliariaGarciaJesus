@model IEnumerable<InmobiliariaGarciaJesus.Models.InmuebleConContrato>

@{
    ViewData["Title"] = "Inmuebles del Propietario";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-home"></i> Inmuebles de @ViewBag.PropietarioNombre</h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a Propietarios
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                                        <th>Tipo de Inmueble</th>
                                        <th>Uso</th>
                                        <th>Estado</th>
                                        <th>Estado de Contrato</th>
                                        <th>Precio</th>
                                        <th class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                                            <td>
                                                <span class="badge bg-info">@Html.DisplayFor(modelItem => item.Tipo)</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.Uso)</span>
                                            </td>
                                            <td>
                                                @if (item.Estado == InmobiliariaGarciaJesus.Models.EstadoInmueble.Activo)
                                                {
                                                    <span class="badge bg-success">Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactivo</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge @item.EstadoContratoCssClass">@item.EstadoContratoTexto</span>
                                            </td>
                                            <td>
                                                @if (item.Precio.HasValue)
                                                {
                                                    <span class="fw-bold text-success">$@item.Precio.Value.ToString("N2")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No especificado</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-controller="Inmuebles" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm me-1" title="Ver detalles">
                                                        <i class="fas fa-eye me-1"></i>
                                                    </a>
                                                    <a asp-controller="Inmuebles" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm" title="Editar">
                                                        <i class="fas fa-edit me-1"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-home fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">Este propietario no tiene inmuebles registrados</h4>
                            <p class="text-muted">Los inmuebles aparecerán aquí cuando sean asignados a este propietario</p>
                            <a asp-controller="Inmuebles" asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Agregar Inmueble
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
