@model InmobiliariaGarciaJesus.Models.AuditoriaViewModel

<!-- Modal de Auditoría -->
<div class="modal fade" id="auditoriaModal" tabindex="-1" aria-labelledby="auditoriaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="auditoriaModalLabel">
                    <i class="fas fa-history me-2"></i>Información de Auditoría
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Nota:</strong> Esta información de auditoría solo es visible para administradores y permite rastrear todas las acciones realizadas sobre esta entidad.
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Información de Creación -->
                    <div class="col-md-6">
                        <div class="card border-success">
                            <div class="card-header bg-success text-white">
                                <h6 class="mb-0">
                                    <i class="fas fa-plus-circle me-2"></i>Información de Creación
                                </h6>
                            </div>
                            <div class="card-body">
                                <dl class="row mb-0">
                                    <dt class="col-sm-5">Fecha:</dt>
                                    <dd class="col-sm-7">
                                        <i class="fas fa-calendar me-1 text-muted"></i>
                                        @Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                                    </dd>

                                    <dt class="col-sm-5">Creado por:</dt>
                                    <dd class="col-sm-7">
                                        <i class="fas fa-user me-1 text-muted"></i>
                                        @(Model.CreadoPor ?? "Sistema")
                                    </dd>

                                    @if (!string.IsNullOrEmpty(Model.UsuarioCreador))
                                    {
                                        <dt class="col-sm-5">Usuario:</dt>
                                        <dd class="col-sm-7">
                                            <span class="badge bg-success">@Model.UsuarioCreador</span>
                                        </dd>
                                    }
                                </dl>
                            </div>
                        </div>
                    </div>

                    <!-- Información de Modificación/Terminación -->
                    <div class="col-md-6">
                        @if (Model.FechaModificacion.HasValue || !string.IsNullOrEmpty(Model.ModificadoPor))
                        {
                            <div class="card border-warning">
                                <div class="card-header bg-warning text-dark">
                                    <h6 class="mb-0">
                                        <i class="fas fa-edit me-2"></i>@(Model.AccionRealizada ?? "Última Modificación")
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        @if (Model.FechaModificacion.HasValue)
                                        {
                                            <dt class="col-sm-5">Fecha:</dt>
                                            <dd class="col-sm-7">
                                                <i class="fas fa-calendar me-1 text-muted"></i>
                                                @Model.FechaModificacion.Value.ToString("dd/MM/yyyy HH:mm")
                                            </dd>
                                        }

                                        @if (!string.IsNullOrEmpty(Model.ModificadoPor))
                                        {
                                            <dt class="col-sm-5">Realizado por:</dt>
                                            <dd class="col-sm-7">
                                                <i class="fas fa-user me-1 text-muted"></i>
                                                @Model.ModificadoPor
                                            </dd>
                                        }

                                        @if (!string.IsNullOrEmpty(Model.UsuarioModificador))
                                        {
                                            <dt class="col-sm-5">Usuario:</dt>
                                            <dd class="col-sm-7">
                                                <span class="badge bg-warning text-dark">@Model.UsuarioModificador</span>
                                            </dd>
                                        }
                                    </dl>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="card border-light">
                                <div class="card-body text-center text-muted">
                                    <i class="fas fa-check-circle fa-3x mb-3"></i>
                                    <p class="mb-0">No se han realizado modificaciones</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Estado Actual y Observaciones -->
                @if (!string.IsNullOrEmpty(Model.EstadoActual) || !string.IsNullOrEmpty(Model.Observaciones))
                {
                    <div class="row mt-3">
                        <div class="col-12">
                            <div class="card border-info">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0">
                                        <i class="fas fa-info-circle me-2"></i>Información Adicional
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        @if (!string.IsNullOrEmpty(Model.EstadoActual))
                                        {
                                            <dt class="col-sm-3">Estado Actual:</dt>
                                            <dd class="col-sm-9">
                                                <span class="badge bg-primary">@Model.EstadoActual</span>
                                            </dd>
                                        }

                                        @if (!string.IsNullOrEmpty(Model.Observaciones))
                                        {
                                            <dt class="col-sm-3">Observaciones:</dt>
                                            <dd class="col-sm-9">@Model.Observaciones</dd>
                                        }
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cerrar
                </button>
            </div>
        </div>
    </div>
</div>
