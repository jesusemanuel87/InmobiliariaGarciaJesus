<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inmobiliaria García Jesús</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @{
        string GetActiveClass(string controller, string action = "")
        {
            var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
            var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
            
            if (string.IsNullOrEmpty(action))
            {
                // Si no se especifica acción, solo marcar activo si es el controlador correcto
                // Y NO es una acción específica que tenga su propio enlace
                if (currentController?.Equals(controller, StringComparison.OrdinalIgnoreCase) == true)
                {
                    // Para el controlador Home, solo marcar "Inicio" como activo si la acción es "Index"
                    if (controller.Equals("Home", StringComparison.OrdinalIgnoreCase))
                    {
                        return currentAction?.Equals("Index", StringComparison.OrdinalIgnoreCase) == true ? "active" : "";
                    }
                    return "active";
                }
                return "";
            }
            else
            {
                return currentController?.Equals(controller, StringComparison.OrdinalIgnoreCase) == true && 
                       currentAction?.Equals(action, StringComparison.OrdinalIgnoreCase) == true ? "active" : "";
            }
        }
    }
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i> Inmobiliaria García Jesús
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark @GetActiveClass("Home")" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Inicio
                            </a>
                        </li>
                        
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Administrador") || User.IsInRole("Empleado"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark @GetActiveClass("Home", "Dashboard")" asp-area="" asp-controller="Home" asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark @GetActiveClass("Propietarios")" asp-area="" asp-controller="Propietarios" asp-action="Index">
                                        <i class="fas fa-user-tie"></i> Propietarios
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark @GetActiveClass("Inquilinos")" asp-area="" asp-controller="Inquilinos" asp-action="Index">
                                        <i class="fas fa-users"></i> Inquilinos
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark @GetActiveClass("Inmuebles")" asp-area="" asp-controller="Inmuebles" asp-action="Index">
                                        <i class="fas fa-building"></i> Inmuebles
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark @GetActiveClass("Contratos")" asp-area="" asp-controller="Contratos" asp-action="Index">
                                        <i class="fas fa-file-contract"></i> Contratos
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark @GetActiveClass("Pagos")" asp-area="" asp-controller="Pagos" asp-action="Index">
                                        <i class="fas fa-money-bill"></i> Pagos
                                    </a>
                                </li>
                            }
                            
                            @if (User.IsInRole("Propietario"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark @GetActiveClass("Inmuebles", "MisInmuebles")" asp-area="" asp-controller="Inmuebles" asp-action="MisInmuebles">
                                        <i class="fas fa-building"></i> Mis Inmuebles
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark @GetActiveClass("Contratos", "MisContratos")" asp-area="" asp-controller="Contratos" asp-action="MisContratos">
                                        <i class="fas fa-file-contract"></i> Mis Contratos
                                    </a>
                                </li>
                            }
                            
                            @if (User.IsInRole("Inquilino"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark @GetActiveClass("Contratos", "MiContrato")" asp-area="" asp-controller="Contratos" asp-action="MiContrato">
                                        <i class="fas fa-file-contract"></i> Mi Contrato
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark @GetActiveClass("Pagos", "MisPagos")" asp-area="" asp-controller="Pagos" asp-action="MisPagos">
                                        <i class="fas fa-money-bill"></i> Mis Pagos
                                    </a>
                                </li>
                            }
                            
                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark @(GetActiveClass("Empleados") == "active" || GetActiveClass("Configuracion") == "active" || GetActiveClass("TiposInmueble") == "active" ? "active" : "")" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-cog"></i> Administración
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Empleados" asp-action="Index">
                                            <i class="fas fa-user-tie"></i> Empleados
                                        </a></li>
                                        <li><a class="dropdown-item" asp-controller="Usuarios" asp-action="Index">
                                            <i class="fas fa-users-cog"></i> Gestión de Usuarios
                                        </a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="TiposInmueble" asp-action="Index">
                                            <i class="fas fa-home"></i> Tipos de Inmuebles
                                        </a></li>
                                        <li><a class="dropdown-item" asp-controller="Configuracion" asp-action="Index">
                                            <i class="fas fa-cog"></i> Configuración
                                        </a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                    
                    <!-- User Authentication Menu -->
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                    @{
                                        var userPhotoUrl = User.FindFirst("FotoPerfil")?.Value;
                                        var userRole = User.FindFirst("RoleDescription")?.Value ?? User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
                                        var displayPhotoUrl = !string.IsNullOrEmpty(userPhotoUrl) ? userPhotoUrl : "/uploads/profiles/user_default.png";
                                    }
                                    <img src="@displayPhotoUrl" alt="Foto de perfil" class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;">
                                    <div class="d-flex flex-column text-start">
                                        <span style="font-size: 14px; line-height: 1.1;">@User.Identity.Name</span>
                                        @if (!string.IsNullOrEmpty(userRole))
                                        {
                                            <small class="text-muted" style="font-size: 11px; line-height: 1;">(@userRole)</small>
                                        }
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Profile">
                                        <i class="fas fa-user-circle"></i> Mi Perfil
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
                                </a>
                            </li>
                            
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Registrarse
                                </a>
                            </li>                            
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Inmobiliaria García Jesús - Sistema de Gestión Inmobiliaria
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
