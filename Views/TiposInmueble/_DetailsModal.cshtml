@model InmobiliariaGarciaJesus.Models.TipoInmuebleEntity

<div class="modal fade" id="tipoInmuebleDetailsModal" tabindex="-1" aria-labelledby="tipoInmuebleDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tipoInmuebleDetailsModalLabel">
                    <i class="fas fa-eye me-2"></i>Detalles del Tipo de Inmueble
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card h-100">
                            <div class="card-header bg-primary text-white">
                                <h6 class="card-title mb-0">
                                    <i class="fas fa-info-circle me-2"></i>Información General
                                </h6>
                            </div>
                            <div class="card-body">
                                <dl class="row">
                                    <dt class="col-sm-4">ID:</dt>
                                    <dd class="col-sm-8">
                                        <span class="badge bg-secondary">#@Model.Id</span>
                                    </dd>

                                    <dt class="col-sm-4">Nombre:</dt>
                                    <dd class="col-sm-8">
                                        <strong class="text-primary">@Model.Nombre</strong>
                                    </dd>

                                    <dt class="col-sm-4">Estado:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.Estado)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>Activo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times me-1"></i>Inactivo
                                            </span>
                                        }
                                    </dd>

                                    <dt class="col-sm-4">Descripción:</dt>
                                    <dd class="col-sm-8">
                                        @if (!string.IsNullOrEmpty(Model.Descripcion))
                                        {
                                            <p class="mb-0">@Model.Descripcion</p>
                                        }
                                        else
                                        {
                                            <em class="text-muted">Sin descripción</em>
                                        }
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100">
                            <div class="card-header bg-info text-white">
                                <h6 class="card-title mb-0">
                                    <i class="fas fa-clock me-2"></i>Información de Sistema
                                </h6>
                            </div>
                            <div class="card-body">
                                <dl class="row">
                                    <dt class="col-12">Fecha de Creación:</dt>
                                    <dd class="col-12">
                                        <i class="fas fa-calendar-plus text-success me-1"></i>
                                        @Model.FechaCreacion.ToString("dd/MM/yyyy")
                                        <br>
                                        <small class="text-muted">@Model.FechaCreacion.ToString("HH:mm:ss")</small>
                                    </dd>
                                </dl>

                                <div class="mt-3">
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Este tipo puede ser utilizado en la creación y edición de inmuebles.
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cerrar
                </button>
                <button type="button" class="btn btn-primary" onclick="tiposInmuebleManager.mostrarModalEditar(@Model.Id)">
                    <i class="fas fa-edit me-1"></i>Editar
                </button>
            </div>
        </div>
    </div>
</div>
