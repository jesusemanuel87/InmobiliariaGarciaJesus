@model IEnumerable<InmobiliariaGarciaJesus.Models.Usuario>

@{
    ViewData["Title"] = "Gestión de Usuarios";
    var userRole = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-users-cog"></i> Gestión de Usuarios</h2>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Filtros -->
            <div class="card shadow mb-3">
                <div class="card-body">
                    <form method="get" asp-action="Index" id="filtrosForm">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label class="form-label"><i class="fas fa-user-tag"></i> Tipo de Usuario</label>
                                <select class="form-select" name="tipo" id="filtroTipo">
                                    <option value="">Todos</option>
                                    <option value="Propietario" selected="@(ViewBag.Tipo == "Propietario")">Propietario</option>
                                    <option value="Inquilino" selected="@(ViewBag.Tipo == "Inquilino")">Inquilino</option>
                                    <option value="Empleado" selected="@(ViewBag.Tipo == "Empleado")">Empleado</option>
                                    <option value="Administrador" selected="@(ViewBag.Tipo == "Administrador")">Administrador</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label"><i class="fas fa-toggle-on"></i> Estado</label>
                                <select class="form-select" name="estado" id="filtroEstado">
                                    <option value="">Todos</option>
                                    <option value="Activo" selected="@(ViewBag.Estado == "Activo")">Activo</option>
                                    <option value="Inactivo" selected="@(ViewBag.Estado == "Inactivo")">Inactivo</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label"><i class="fas fa-search"></i> Buscar</label>
                                <input type="text" class="form-control" name="buscar" id="filtroBuscar" 
                                       placeholder="Nombre, email, username..." value="@ViewBag.Buscar">
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-filter"></i> Filtrar
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Tabla de Usuarios -->
            <div class="card shadow">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Usuario</th>
                                        <th>Nombre Completo</th>
                                        <th>Email</th>
                                        <th>Rol</th>
                                        <th>Estado</th>
                                        <th>Fecha Creación</th>
                                        <th class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var usuario in Model)
                                    {
                                        <tr>
                                            <td><span class="badge bg-secondary">#@usuario.Id</span></td>
                                            <td>
                                                <strong>@usuario.NombreUsuario</strong>
                                                @if (usuario.RequiereCambioClave)
                                                {
                                                    <span class="badge bg-warning text-dark ms-1" title="Requiere cambio de contraseña">
                                                        <i class="fas fa-key"></i>
                                                    </span>
                                                }
                                            </td>
                                            <td>@usuario.NombreCompleto</td>
                                            <td>
                                                <small class="text-muted">
                                                    <i class="fas fa-envelope"></i> @usuario.Email
                                                </small>
                                            </td>
                                            <td>
                                                @{
                                                    var badgeClass = usuario.Rol switch
                                                    {
                                                        InmobiliariaGarciaJesus.Models.RolUsuario.Administrador => "bg-danger",
                                                        InmobiliariaGarciaJesus.Models.RolUsuario.Empleado => "bg-primary",
                                                        InmobiliariaGarciaJesus.Models.RolUsuario.Propietario => "bg-success",
                                                        InmobiliariaGarciaJesus.Models.RolUsuario.Inquilino => "bg-info",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @badgeClass">@usuario.RolDescripcion</span>
                                            </td>
                                            <td class="text-center">
                                                @if (usuario.Estado)
                                                {
                                                    <span class="badge bg-success">Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactivo</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @usuario.FechaCreacion.ToString("dd/MM/yyyy")
                                                </small>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    @if (!usuario.Estado)
                                                    {
                                                        <button type="button" class="btn btn-sm btn-success" 
                                                                onclick="activarUsuario(@usuario.Id)"
                                                                title="Activar Usuario">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button type="button" class="btn btn-sm btn-warning" 
                                                                onclick="desactivarUsuario(@usuario.Id)"
                                                                title="Desactivar Usuario">
                                                            <i class="fas fa-ban"></i>
                                                        </button>
                                                    }
                                                    
                                                    <button type="button" class="btn btn-sm btn-primary" 
                                                            onclick="restablecerContrasena(@usuario.Id)"
                                                            title="Restablecer Contraseña">
                                                        <i class="fas fa-key"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Resumen -->
                        <div class="mt-3">
                            <p class="text-muted">
                                <i class="fas fa-info-circle"></i> 
                                Mostrando @Model.Count() usuario(s)
                            </p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle"></i> No se encontraron usuarios con los filtros aplicados.
                        </div>
                    }
                </div>
            </div>

            <!-- Sección de Usuarios sin Cuenta -->
            <div class="card shadow mt-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user-plus"></i> Crear Usuarios para Personas Existentes</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        <i class="fas fa-info-circle"></i> 
                        Aquí puedes crear usuarios para propietarios e inquilinos que no tienen cuenta en el sistema.
                    </p>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <button type="button" class="btn btn-success w-100" onclick="verPropietariosSinUsuario()">
                                <i class="fas fa-home"></i> Ver Propietarios sin Usuario
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button type="button" class="btn btn-info w-100" onclick="verInquilinosSinUsuario()">
                                <i class="fas fa-user"></i> Ver Inquilinos sin Usuario
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para mostrar personas sin usuario -->
<div class="modal fade" id="personasSinUsuarioModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="personasSinUsuarioModalLabel">
                    <i class="fas fa-user-plus"></i> Personas sin Usuario
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="personasSinUsuarioModalBody">
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script src="~/js/Usuarios/usuarios-manager.js?v=@DateTime.Now.Ticks"></script>
    <script>
        // Auto-submit filtros
        document.getElementById('filtroTipo').addEventListener('change', function() {
            document.getElementById('filtrosForm').submit();
        });
        
        document.getElementById('filtroEstado').addEventListener('change', function() {
            document.getElementById('filtrosForm').submit();
        });

        // Auto-dismiss alerts
        setTimeout(() => {
            $('.alert').fadeOut();
        }, 5000);
    </script>
}
